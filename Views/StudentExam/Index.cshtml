@model IEnumerable<OnlineSinavSistemi.Models.Course>

<h2>Derslerim</h2>

@if (!Model.Any())
{
    <p>Henüz kayýtlý olduðunuz bir ders yok.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Ders Adý</th>
                <th>Öðretmen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ders in Model)
            {
                <tr>
                    <td>@ders.CourseName</td>
                    <td>@ders.Teacher?.UserName ?? "Öðretmen bilgisi yok"</td>
                </tr>
            }
        </tbody>
    </table>
}
