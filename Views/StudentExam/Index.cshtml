@model IEnumerable<OnlineSinavSistemi.Models.Course>

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .courses-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        color: var(--primary-color);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background: var(--accent-color);
            border-radius: 2px;
        }

    .page-subtitle {
        color: var(--text-light);
        font-size: 1.1rem;
        margin-top: 20px;
    }

    .courses-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 40px;
    }

    .course-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        border: 2px solid transparent;
        transition: var(--transition);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

        .course-card:hover {
            transform: translateY(-8px);
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
        }

    .course-card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        padding: 30px;
        position: relative;
        overflow: hidden;
        min-height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .course-card-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 Q500,100 1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: bottom;
        }

    .course-icon {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .course-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        position: relative;
        z-index: 1;
        line-height: 1.3;
    }

    .course-code {
        background: rgba(255, 255, 255, 0.2);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-block;
        position: relative;
        z-index: 1;
    }

    .course-card-body {
        padding: 30px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .teacher-info {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .teacher-avatar {
        width: 50px;
        height: 50px;
        background: var(--secondary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: var(--primary-color);
        flex-shrink: 0;
    }

    .teacher-details {
        flex: 1;
    }

    .teacher-name {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 3px;
    }

    .teacher-role {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .course-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
        transition: var(--transition);
    }

        .stat-item:hover {
            transform: translateY(-3px);
            background: var(--secondary-color);
        }

    .stat-number {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--text-light);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .course-description {
        color: var(--text-light);
        line-height: 1.6;
        margin-bottom: 25px;
        font-size: 0.95rem;
        flex-grow: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .course-card-footer {
        padding: 0 30px 30px 30px;
        margin-top: auto;
    }

    .course-actions {
        display: flex;
        gap: 10px;
    }

    .btn-view-exams {
        flex: 1;
        background: rgba(44, 90, 160, 0.1);
        color: var(--primary-color);
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        border: 1px solid rgba(44, 90, 160, 0.2);
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        text-align: center;
    }

        .btn-view-exams:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
        }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        background: rgba(233, 242, 249, 0.5);
        border-radius: 20px;
        border: 2px dashed #c0d4e8;
        margin-top: 40px;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #c0d4e8;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: var(--text-light);
        margin-bottom: 15px;
        font-size: 1.5rem;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto 30px;
        font-size: 1.1rem;
    }

    .stats-bar {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .total-courses {
        text-align: center;
        padding: 15px;
    }

    .total-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .total-label {
        color: var(--text-light);
        font-weight: 600;
        font-size: 1.1rem;
    }

    .filter-section {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 25px;
        box-shadow: var(--shadow);
    }

    .filter-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .search-box {
        position: relative;
        margin-bottom: 15px;
    }

    .search-input {
        width: 100%;
        padding: 15px 50px 15px 20px;
        border: 2px solid #e1e8f0;
        border-radius: 50px;
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
    }

        .search-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            outline: none;
        }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    @@media (max-width: 768px) {
        .courses-grid

    {
        grid-template-columns: 1fr;
    }

    .page-title {
        font-size: 2rem;
    }

    .course-stats {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .stats-bar {
        grid-template-columns: 1fr;
    }

    .course-actions {
        flex-direction: column;
    }

    .btn-view-exams {
        width: 100%;
    }

    }

    @@media (max-width: 480px) {
        .course-card-header

    {
        padding: 20px;
        min-height: 120px;
    }

    .course-icon {
        width: 50px;
        height: 50px;
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .course-title {
        font-size: 1.4rem;
    }

    .course-card-body {
        padding: 20px;
    }

    .course-card-footer {
        padding: 0 20px 20px 20px;
    }

    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .course-card:hover .course-icon {
        transform: scale(1.1);
        transition: var(--transition);
    }

    .teacher-avatar {
        transition: var(--transition);
    }

    .course-card:hover .teacher-avatar {
        transform: scale(1.1);
    }
</style>

<div class="courses-section">
    <div class="container">
        <!-- Sayfa Baþlýðý -->
        <div class="page-header">
            <h1 class="page-title">Derslerim</h1>
            <p class="page-subtitle">Kayýtlý olduðunuz tüm dersleri buradan görüntüleyebilirsiniz.</p>
        </div>

        <!-- Toplam Ders Sayýsý -->
        @if (Model.Any())
        {
            <div class="stats-bar">
                <div class="total-courses">
                    <span class="total-number">@Model.Count()</span>
                    <span class="total-label">Toplam Ders</span>
                </div>
            </div>

            <!-- Arama Kutusu -->
            <div class="filter-section">
                <div class="filter-title">
                    <i class="fas fa-search"></i> Ders Ara
                </div>
                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Ders adý veya öðretmen ara..." id="searchInput">
                    <div class="search-icon">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
            </div>
        }

        <!-- Ders Kartlarý Grid -->
        <div class="courses-grid">
            @if (Model.Any())
            {
                var courseIndex = 0;

                @foreach (var ders in Model)
                {
                    <div class="course-card" style="animation-delay: @(courseIndex * 0.1)s"
                         data-course-name="@ders.CourseName.ToLower()"
                         data-teacher-name="@(ders.Teacher?.UserName?.ToLower() ?? "")">

                        <div class="course-card-header">
                            <div class="course-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <h3 class="course-title">@ders.CourseName</h3>
                            <span class="course-code">DERS-@ders.Id.ToString("D4")</span>
                        </div>

                        <div class="course-card-body">
                            <!-- Öðretmen Bilgileri -->
                            <div class="teacher-info">
                                <div class="teacher-avatar">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                </div>
                                <div class="teacher-details">
                                    <div class="teacher-name">
                                        @(ders.Teacher?.UserName ?? "Öðretmen bilgisi yok")
                                    </div>
                                    <div class="teacher-role">Öðretmen</div>
                                </div>
                            </div>

                            <!-- Ders Ýstatistikleri -->
                            <div class="course-stats">
                                <div class="stat-item">
                                    <span class="stat-number">0</span>
                                    <span class="stat-label">Aktif Sýnav</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number">0</span>
                                    <span class="stat-label">Tamamlanan</span>
                                </div>
                            </div>

                            <!-- Ders Açýklamasý -->
                            <div class="course-description">
                                @if (string.IsNullOrEmpty(ders.CourseName))
                                {
                                    <span class="text-muted">Bu ders için açýklama bulunmuyor.</span>
                                }
                                else
                                {
                                    @ders.ToString
                                }
                            </div>
                        </div>

                        <div class="course-card-footer">
                            <div class="course-actions">
                                <a href="@Url.Action("Index", "Exam", new { courseId = ders.Id })" class="btn-view-exams">
                                    <i class="fas fa-list-alt"></i>
                                    <span>Sýnavlarý Görüntüle</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    courseIndex++;
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h3>Henüz Dersiniz Yok</h3>
                    <p>Henüz kayýtlý olduðunuz bir ders bulunmamaktadýr. Öðretmeniniz sizi bir derse eklediðinde burada görünecektir.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Kart animasyonlarý
        const courseCards = document.querySelectorAll('.course-card');
        courseCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
        });

        // Arama fonksiyonu
        const searchInput = document.getElementById('searchInput');

        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                const cards = document.querySelectorAll('.course-card');

                let visibleCount = 0;

                cards.forEach(card => {
                    const courseName = card.dataset.courseName;
                    const teacherName = card.dataset.teacherName;

                    const matchesSearch = searchTerm === '' ||
                        courseName.includes(searchTerm) ||
                        teacherName.includes(searchTerm);

                    if (matchesSearch) {
                        card.style.display = 'flex';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Eðer hiç kart görünmüyorsa mesaj göster
                const emptyState = document.querySelector('.empty-state');

                if (visibleCount === 0 && cards.length > 0) {
                    if (!emptyState) {
                        const grid = document.querySelector('.courses-grid');
                        const noResults = document.createElement('div');
                        noResults.className = 'empty-state';
                        noResults.innerHTML = `
                            <div class="empty-state-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h3>Sonuç Bulunamadý</h3>
                            <p>"${searchTerm}" ile eþleþen ders bulunamadý.</p>
                        `;
                        grid.appendChild(noResults);
                    }
                } else if (emptyState && emptyState.parentNode && searchTerm !== '') {
                    emptyState.parentNode.removeChild(emptyState);
                }
            });
        }

        // Ýstatistik sayma animasyonu
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const target = parseInt(stat.textContent);
            let current = 0;
            const increment = target / 30;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                stat.textContent = Math.round(current);
            }, 30);
        });

        // Toplam ders sayýsý animasyonu
        const totalNumber = document.querySelector('.total-number');
        if (totalNumber) {
            const target = parseInt(totalNumber.textContent);
            let current = 0;
            const increment = target / 30;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                totalNumber.textContent = Math.round(current);
            }, 30);
        }

        // Ders açýklamalarýný tamamýný göster/gizle
        const courseDescriptions = document.querySelectorAll('.course-description');
        courseDescriptions.forEach(desc => {
            const fullText = desc.textContent;

            // Eðer metin çok uzunsa
            if (fullText.length > 150 && !fullText.includes('Bu ders için açýklama bulunmuyor.')) {
                const shortText = fullText.substring(0, 150) + '...';
                desc.textContent = shortText;

                // Göster/gizle butonu ekle
                const toggleButton = document.createElement('button');
                toggleButton.type = 'button';
                toggleButton.className = 'show-more-btn';
                toggleButton.innerHTML = '<i class="fas fa-chevron-down"></i> Devamýný Göster';
                toggleButton.style.background = 'none';
                toggleButton.style.border = 'none';
                toggleButton.style.color = 'var(--primary-color)';
                toggleButton.style.cursor = 'pointer';
                toggleButton.style.fontSize = '0.9rem';
                toggleButton.style.marginTop = '10px';
                toggleButton.style.display = 'flex';
                toggleButton.style.alignItems = 'center';
                toggleButton.style.gap = '5px';
                toggleButton.style.fontWeight = '600';

                let isExpanded = false;
                toggleButton.addEventListener('click', function() {
                    if (!isExpanded) {
                        desc.textContent = fullText;
                        toggleButton.innerHTML = '<i class="fas fa-chevron-up"></i> Daha Az Göster';
                        isExpanded = true;
                    } else {
                        desc.textContent = shortText;
                        toggleButton.innerHTML = '<i class="fas fa-chevron-down"></i> Devamýný Göster';
                        isExpanded = false;
                    }
                });

                desc.parentNode.insertBefore(toggleButton, desc.nextSibling);
            }
        });
    });
</script>