@model IEnumerable<OnlineSinavSistemi.Models.Course>

<div class="container-fluid py-5">
    <!-- Baþlýk -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-journal-bookmark display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Derslerim</h1>
                    <p class="text-muted mb-0">Kayýtlý olduðunuz derslerin listesi</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Dersler Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-columns me-2"></i>Ders Listesi
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center p-5">
                            <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                            <h5 class="fw-bold text-dark mb-2">Henüz kayýtlý olduðunuz bir ders yok.</h5>
                            <p class="text-muted">Sistem yöneticinizden ders kaydý yapýlmasýný talep edebilirsiniz.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-book me-2"></i>Ders Adý
                                        </th>
                                        <th class="py-3 px-4">
                                            <i class="bi bi-person-badge me-2"></i>Öðretmen
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ders in Model)
                                    {
                                        <tr>
                                            <td class="py-3 px-4 fw-bold">@ders.CourseName</td>
                                            <td class="py-3 px-4">@ders.Teacher?.UserName ?? "Öðretmen bilgisi yok"</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                @if (Model.Any())
                {
                    <div class="card-footer bg-transparent border-0 py-3 px-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                Toplam @Model.Count() ders bulunuyor
                            </span>
                            <div>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-house me-1"></i>Ana Sayfa
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-footer bg-transparent border-0 py-3 px-4">
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-house me-2"></i>Ana Sayfaya Dön
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-color: #667eea;
            color: white;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05);
    }

    .table th {
        border-top: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }
</style>