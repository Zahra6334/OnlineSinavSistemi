@model OnlineSinavSistemi.Models.StudentExam

@{
    ViewData["Title"] = "Sýnavý Çöz";
    var exam = Model?.Exam;
    var remainingTime = 0;

    // DurationMinutes nullable olmadýðý için düzeltildi
    if (Model?.StartTime.HasValue == true && exam != null && exam.DurationMinutes > 0)
    {
        var elapsedMinutes = (DateTime.Now - Model.StartTime.Value).TotalMinutes;
        remainingTime = (int)(exam.DurationMinutes - elapsedMinutes);
        if (remainingTime < 0) remainingTime = 0;
    }
}

<div class="container-fluid py-4">
    <!-- Baþlýk ve Sýnav Bilgileri -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="card-title mb-0">
                                <i class="bi bi-pencil-square me-2"></i>@exam?.Title
                            </h2>
                        </div>
                        <div class="text-end">
                            <!-- Geri Sayým Timer -->
                            @if (exam?.DurationMinutes > 0)
                            {
                                <div id="examTimer" class="badge bg-warning text-dark fs-6 p-2">
                                    <i class="bi bi-clock me-1"></i>
                                    <span id="timerMinutes">@exam.DurationMinutes</span>:<span id="timerSeconds">00</span>
                                </div>
                            }
                            else
                            {
                                <div id="examTimer" class="badge bg-info text-white fs-6 p-2">
                                    <i class="bi bi-clock me-1"></i>Süresiz
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-book fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Ders</h6>
                                    <p class="fw-bold mb-0">@exam?.Course?.CourseName</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-question-circle fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Toplam Soru</h6>
                                    <p class="fw-bold mb-0">@exam?.Questions?.Count soru</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sýnav Baþlama Zamaný -->
                    <div class="alert alert-light border-0 rounded-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-check text-primary fs-4 me-3"></i>
                            <div>
                                <h6 class="alert-heading mb-1">Sýnav Baþlama Zamaný</h6>
                                <p class="mb-0">
                                    <i class="bi bi-clock-history me-1"></i>
                                    @Model?.StartTime?.ToString("dd.MM.yyyy HH:mm:ss")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info border-0 rounded-3">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Sýnav Kurallarý</h6>
                                <p class="mb-0">
                                    • Sýnav süresi dolduðunda otomatik olarak sonlanacaktýr.<br>
                                    • Sorularý cevapladýktan sonra "Sýnavý Bitir" butonuna basýnýz.<br>
                                    • Klasik sorular için dosya yükleyebilir veya metin cevabý yazabilirsiniz.<br>
                                    • Sayfayý yenilemeyin veya tarayýcýyý kapatmayýn.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sorular -->
    <div class="row">
        <div class="col-12">
            @if (exam?.Questions != null && exam.Questions.Any())
            {
                <form id="examForm" asp-action="SubmitExam" method="post" enctype="multipart/form-data" class="card border-0 shadow-lg">
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-question-circle me-2"></i>Sorular
                            </h5>
                            <div class="d-flex align-items-center">
                                <div class="progress" style="width: 200px; height: 10px;">
                                    <div id="progressBar" class="progress-bar bg-warning" role="progressbar" style="width: 0%"></div>
                                </div>
                                <span class="ms-2" id="progressText">0/@exam.Questions.Count</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" id="autoSubmit" name="autoSubmit" value="false" />

                        @for (int i = 0; i < exam.Questions.Count; i++)
                        {
                            var question = exam.Questions.ElementAt(i);
                            var questionType = question.Type == OnlineSinavSistemi.Models.QuestionType.CoktanSecmeli ? "Çoktan Seçmeli" : "Klasik";

                            <div class="card mb-4 border-0 shadow-sm question-card" data-question-index="@i">
                                <div class="card-header bg-light py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="fw-bold text-dark mb-0">
                                            <span class="badge bg-primary me-2">Soru @(i + 1)</span>
                                            @questionType
                                        </h5>
                                        <span class="badge bg-info">
                                            <i class="bi bi-star-fill me-1"></i>@(question.Point ?? 0) puan
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-4">
                                        <h6 class="fw-bold text-dark mb-3">@question.QuestionText</h6>
                                        <input type="hidden" name="Answers[@i].QuestionId" value="@question.Id" />

                                        @* Çoktan seçmeli sorular *@
                                        @if (question.Type == OnlineSinavSistemi.Models.QuestionType.CoktanSecmeli)
                                        {
                                            <div class="list-group list-group-flush">
                                                @foreach (var choice in question.Choices ?? new List<OnlineSinavSistemi.Models.Choice>())
                                                {
                                                    <div class="list-group-item border-0 px-0 py-2">
                                                        <div class="form-check">
                                                            <input class="form-check-input question-answer"
                                                                   type="radio"
                                                                   name="Answers[@i].SelectedChoiceId"
                                                                   id="choice-@choice.Id"
                                                                   value="@choice.Id" />
                                                            <label class="form-check-label fs-6" for="choice-@choice.Id">
                                                                @choice.Text
                                                            </label>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        @* Klasik sorular *@
                                        else if (question.Type == OnlineSinavSistemi.Models.QuestionType.Klasik)
                                        {
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-bold">
                                                            <i class="bi bi-file-earmark-arrow-up me-1"></i>Dosya Yükle
                                                        </label>
                                                        <input type="file"
                                                               class="form-control question-answer"
                                                               name="Answers[@i].FileUpload"
                                                               accept=".pdf,.doc,.docx,.jpg,.jpeg,.png"
                                                               onchange="updateProgress()" />
                                                        <div class="form-text">PDF, DOC, DOCX, JPG, PNG (Max: 10MB)</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-bold">
                                                            <i class="bi bi-text-paragraph me-1"></i>Metin Cevabý
                                                        </label>
                                                        <textarea class="form-control question-answer"
                                                      name="Answers[@i].AnswerText"
                                                      rows="6"
                                                      placeholder="Cevabýnýzý buraya yazýnýz..."
                                                      oninput="updateProgress()"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-transparent border-0 py-4 px-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Sinavlarim" class="btn btn-outline-primary" onclick="return confirmSExit()">
                                <i class="bi bi-arrow-left me-2"></i>Sýnav Listesine Dön
                            </a>
                            <div>
                                <button type="button" class="btn btn-warning btn-lg me-2" onclick="saveProgress()">
                                    <i class="bi bi-save me-2"></i>Kaydet
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" id="submitButton">
                                    <i class="bi bi-check-circle me-2"></i>Sýnavý Bitir
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-question-circle display-1 text-muted"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-3">Soru Bulunamadý</h3>
                        <p class="text-muted mb-4">Bu sýnavda henüz soru eklenmemiþ.</p>
                        <a asp-action="Sinavlarim" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Sýnav Listesine Dön
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

