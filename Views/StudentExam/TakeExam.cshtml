@model OnlineSinavSistemi.Models.StudentExam

@{
    ViewData["Title"] = "Sýnavý Çöz";
    var exam = Model?.Exam;
}

<h2>@exam?.Baslik</h2>
<p>Süre: @exam?.SureDakika dakika</p>

@if(exam?.Questions != null && exam.Questions.Any())
{
<form asp-action="SubmitExam" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    @for(int i = 0; i < exam.Questions.Count; i++)
        {
            var question = exam.Questions.ElementAt(i);
    <div class="card mb-3">
        <div class="card-header">
            Soru @(i+1): @question.SoruMetni
        </div>
        <div class="card-body">
            @if(question.Tip == OnlineSinavSistemi.Models.QuestionType.CoktanSecmeli)
                    {
                        foreach(var choice in question.Choices ?? new List<OnlineSinavSistemi.Models.Choice>())
                        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Answers[@i].SecilenChoice" value="@choice.Id" />
                <label class="form-check-label">@choice.Metin</label>
            </div>
                        }
                    }
                    else if(question.Tip == OnlineSinavSistemi.Models.QuestionType.Klasik)
                    {
            <div class="mb-2">
                <label>Dosya Yükle (PDF, DOCX, JPG vb.)</label>
                <input type="file" class="form-control" name="Answers[@i].DosyaYolu" />
            </div>
            <div class="mb-2">
                <label>Metin Cevabý</label>
                <textarea class="form-control" name="Answers[@i].MetinCevap"></textarea>
            </div>
                    }
        </div>
    </div>
        }

    <button type="submit" class="btn btn-success">Sýnavý Bitir</button>
</form>
}
else
{
<p>Bu sýnavda soru bulunmamaktadýr.</p>
}