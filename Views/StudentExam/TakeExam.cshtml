@section Scripts {
    <script>
        // Sýnav süresi (dakika)
        var examDurationMinutes = @(exam?.DurationMinutes ?? 0);
        var remainingTimeSeconds = @(remainingTime * 60);
        var timerInterval;
        var autoSubmitted = false;

        // Sayfa yüklendiðinde timer'ý baþlat
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Sýnav süresi (dk):', examDurationMinutes);

            // Eðer süre bitmiþse otomatik gönder
            if (remainingTimeSeconds <= 0 && examDurationMinutes > 0) {
                autoSubmitExam();
                return;
            }

            // Timer'ý baþlat (sadece süreli sýnavlarda)
            if (examDurationMinutes > 0) {
                startTimer();
            }

            // Ýlerleme durumunu güncelle
            updateProgress();

            // Sayfa kapatýlýrken uyarý göster
            window.addEventListener('beforeunload', function(e) {
                if (!autoSubmitted) {
                    e.preventDefault();
                    e.returnValue = 'Sýnav devam ediyor. Sayfadan ayrýlmak istediðinize emin misiniz?';
                }
            });

            // Otomatik kaydetme (her 30 saniyede bir)
            setInterval(saveProgress, 30000);

            // Kaydedilmiþ ilerlemeyi yükle
            loadProgress();
        });

        // Timer fonksiyonu
        function startTimer() {
            timerInterval = setInterval(function() {
                remainingTimeSeconds--;

                // Dakika ve saniyeleri hesapla
                var minutes = Math.floor(remainingTimeSeconds / 60);
                var seconds = remainingTimeSeconds % 60;

                // Timer'ý güncelle
                document.getElementById('timerMinutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('timerSeconds').textContent = seconds.toString().padStart(2, '0');

                // 10 dakika kala uyarý
                if (remainingTimeSeconds === 600) {
                    showAlert('warning', '10 dakika kaldý!');
                }

                // 5 dakika kala uyarý
                if (remainingTimeSeconds === 300) {
                    showAlert('warning', '5 dakika kaldý!');
                    document.getElementById('examTimer').classList.add('time-warning');
                }

                // 1 dakika kala uyarý
                if (remainingTimeSeconds === 60) {
                    showAlert('danger', 'Son 1 dakika!');
                }

                // Süre bittiðinde
                if (remainingTimeSeconds <= 0) {
                    clearInterval(timerInterval);
                    autoSubmitExam();
                }

                // Ýlerleme çubuðunu güncelle
                var progressPercentage = ((examDurationMinutes * 60 - remainingTimeSeconds) / (examDurationMinutes * 60)) * 100;
                document.getElementById('progressBar').style.width = progressPercentage + '%';

            }, 1000);
        }

        // Otomatik sýnav gönderme
        function autoSubmitExam() {
            if (autoSubmitted) return;

            autoSubmitted = true;
            document.getElementById('autoSubmit').value = 'true';
            showAlert('danger', 'Süre doldu! Sýnav otomatik olarak gönderiliyor...');

            setTimeout(function() {
                document.getElementById('examForm').submit();
            }, 3000);
        }

        // Ýlerleme durumunu güncelle
        function updateProgress() {
            var totalQuestions = @exam?.Questions?.Count ?? 0;
            var answeredQuestions = 0;

            // Çoktan seçmeli sorularý kontrol et
            var radioInputs = document.querySelectorAll('input[type="radio"]:checked');
            answeredQuestions += radioInputs.length / (@exam?.Questions?.Count ?? 1); // Her soru için bir tane seçili

            // Klasik sorularý kontrol et
            var textareas = document.querySelectorAll('textarea.question-answer');
            textareas.forEach(function(textarea) {
                if (textarea.value.trim().length > 0) {
                    answeredQuestions++;
                }
            });

            // Dosya yüklemelerini kontrol et
            var fileInputs = document.querySelectorAll('input[type="file"].question-answer');
            fileInputs.forEach(function(input) {
                if (input.files.length > 0) {
                    answeredQuestions++;
                }
            });

            // Ýlerleme yüzdesini hesapla
            var progressPercentage = totalQuestions > 0 ? (answeredQuestions / totalQuestions) * 100 : 0;
            document.getElementById('progressBar').style.width = progressPercentage + '%';
            document.getElementById('progressText').textContent = Math.round(answeredQuestions) + '/' + totalQuestions;
        }

        // Uyarý gösterme
        function showAlert(type, message) {
            var alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-' + type + ' alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3 z-3';
            alertDiv.style.minWidth = '300px';
            alertDiv.innerHTML = `
                <strong>${type === 'danger' ? 'Dikkat!' : 'Bilgi'}</strong> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // 5 saniye sonra kaldýr
            setTimeout(function() {
                alertDiv.remove();
            }, 5000);
        }

        // Çýkýþ onayý
        function confirmSExit() {
            return confirm('Sýnavdan çýkmak istediðinize emin misiniz? Cevaplarýnýz kaydedilecek.');
        }

        // Ýlerlemeyi kaydet (localStorage)
        function saveProgress() {
            try {
                var formData = new FormData(document.getElementById('examForm'));
                var answers = {};

                // Form verilerini topla
                for (var pair of formData.entries()) {
                    if (pair[0].startsWith('Answers[')) {
                        answers[pair[0]] = pair[1];
                    }
                }

                // LocalStorage'a kaydet
                localStorage.setItem('exam_progress_@Model.Id', JSON.stringify({
                    answers: answers,
                    timestamp: new Date().toISOString()
                }));

                // Geri sayým süresini de kaydet (sadece süreli sýnavlarda)
                if (examDurationMinutes > 0) {
                    localStorage.setItem('exam_timer_@Model.Id', remainingTimeSeconds);
                }

                showAlert('success', 'Ýlerleme kaydedildi.');
                console.log('Ýlerleme kaydedildi:', answers);
            } catch (error) {
                console.error('Kaydetme hatasý:', error);
            }
        }

        // Kaydedilmiþ ilerlemeyi yükle
        function loadProgress() {
            try {
                var savedProgress = localStorage.getItem('exam_progress_@Model.Id');
                if (savedProgress) {
                    var data = JSON.parse(savedProgress);
                    var answers = data.answers;

                    // Cevaplarý doldur
                    for (var key in answers) {
                        var element = document.querySelector('[name="' + key + '"]');
                        if (element) {
                            if (element.type === 'radio') {
                                if (element.value === answers[key]) {
                                    element.checked = true;
                                }
                            } else if (element.type === 'textarea') {
                                element.value = answers[key];
                            }
                        }
                    }

                    // Timer'ý yükle (sadece süreli sýnavlarda)
                    if (examDurationMinutes > 0) {
                        var savedTimer = localStorage.getItem('exam_timer_@Model.Id');
                        if (savedTimer) {
                            remainingTimeSeconds = parseInt(savedTimer);
                            if (remainingTimeSeconds > 0) {
                                var minutes = Math.floor(remainingTimeSeconds / 60);
                                var seconds = remainingTimeSeconds % 60;
                                document.getElementById('timerMinutes').textContent = minutes.toString().padStart(2, '0');
                                document.getElementById('timerSeconds').textContent = seconds.toString().padStart(2, '0');
                            }
                        }
                    }

                    showAlert('info', 'Kaydedilmiþ cevaplarýnýz yüklendi.');
                    updateProgress();
                }
            } catch (error) {
                console.error('Yükleme hatasý:', error);
            }
        }

        // Cevaplar deðiþtiðinde ilerlemeyi güncelle
        document.querySelectorAll('.question-answer').forEach(function(element) {
            element.addEventListener('change', updateProgress);
            element.addEventListener('input', updateProgress);
        });
    </script>
}