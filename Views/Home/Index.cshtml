@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid bg-light py-5" style="min-height: 100vh;">
    <!-- Hero Section -->
    <div class="row justify-content-center align-items-center mb-5">
        <div class="col-lg-8 text-center">
            <div class="mb-4">
                <i class="bi bi-pencil-square display-1 text-primary"></i>
            </div>
            <h1 class="display-3 fw-bold text-dark mb-3">Online Sınav Sistemine Hoş Geldiniz</h1>
            <p class="lead fs-4 text-muted mb-4">Profesyonel sınav deneyimi için doğru adres</p>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row justify-content-center g-4">
        <!-- Öğrenci Kartı -->
        <div class="col-md-5">
            <div class="card border-0 shadow-lg h-100 hover-shadow" style="transition: all 0.3s;">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-mortarboard-fill display-6 me-3"></i>
                        <h3 class="card-title mb-0">Öğrenciler İçin</h3>
                    </div>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Kolay sınav katılımı
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Anlık sonuç görüntüleme
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Performans analiz raporları
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Zamanlı sınav deneyimi
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Öğretmen Kartı -->
        <div class="col-md-5">
            <div class="card border-0 shadow-lg h-100 hover-shadow" style="transition: all 0.3s;">
                <div class="card-header bg-success text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge display-6 me-3"></i>
                        <h3 class="card-title mb-0">Öğretmenler İçin</h3>
                    </div>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Kolay sınav oluşturma
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Soru bankası yönetimi
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Detaylı istatistikler
                        </li>
                        <li class="list-group-item border-0 py-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Otomatik değerlendirme
                        </li>
                    </ul>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Info Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-8 text-center">
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <h4 class="alert-heading"><i class="bi bi-lightbulb me-2"></i>Neden Bizi Seçmelisiniz?</h4>
                <p class="mb-0">Güvenli, hızlı ve kullanıcı dostu arayüzümüz ile eğitim teknolojilerinde öncüyüz. Tüm sınav süreçlerinizi kolayca yönetin.</p>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline hover effect (minimal CSS) -->
<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
</style>