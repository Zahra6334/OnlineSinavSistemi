<script>
    // Form değişikliklerini kontrol et
    window.addEventListener('beforeunload', function (e) {
        const form = document.getElementById('editForm');
        const isDirty = Array.from(form.querySelectorAll('input, select'))
            .some(input => input.defaultValue !== input.value);

        if (isDirty) {
            e.preventDefault();
            e.returnValue = 'Yapılan değişiklikler kaydedilmemiş olabilir. Sayfadan ayrılmak istediğinize emin misiniz?';
        }
    });
</script>