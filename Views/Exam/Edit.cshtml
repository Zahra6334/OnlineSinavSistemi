<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form animasyonu
        const editForm = document.getElementById('editForm');
        const animatedInputs = document.querySelectorAll('.animated-input');

        // Sayfa yüklendiğinde animasyonları başlat
        setTimeout(() => {
            animatedInputs.forEach((input, index) => {
                input.style.animationDelay = `${0.1 + (index * 0.1)}s`;
                input.classList.add('animated-input');
            });
        }, 300);

        // Form gönderim butonu animasyonu
        const saveButton = document.getElementById('saveButton');
        editForm.addEventListener('submit', function(e) {
            if (editForm.checkValidity()) {
                saveButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Kaydediliyor...</span>';
                saveButton.disabled = true;
            }
        });

        // Tarih input'u için bugünün tarihini minimum değer olarak ayarla
        const startDateInput = document.querySelector('input[type="datetime-local"]');
        if (startDateInput) {
            const now = new Date();
            const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000)
                .toISOString()
                .slice(0, 16);
            startDateInput.min = localDateTime;

            // Eğer tarih bugünden önceyse, bugüne ayarla
            const currentValue = startDateInput.value;
            if (currentValue && new Date(currentValue) < now) {
                startDateInput.value = localDateTime;
            }
        }

        // Süre input'u için real-time değer gösterimi
        const durationInput = document.querySelector('input[name="DurationMinutes"]');
        if (durationInput) {
            const durationPreview = document.createElement('div');
            durationPreview.className = 'form-hint';
            durationPreview.id = 'durationPreview';
            durationPreview.style.marginTop = '5px';
            durationInput.parentNode.appendChild(durationPreview);

            function updateDurationPreview() {
                const minutes = parseInt(durationInput.value) || 0;
                const hours = Math.floor(minutes / 60);
                const remainingMinutes = minutes % 60;

                let previewText = '';
                if (hours > 0) {
                    previewText = `${hours} saat`;
                    if (remainingMinutes > 0) {
                        previewText += ` ${remainingMinutes} dakika`;
                    }
                } else {
                    previewText = `${minutes} dakika`;
                }

                durationPreview.textContent = `Toplam: ${previewText}`;
            }

            durationInput.addEventListener('input', updateDurationPreview);
            updateDurationPreview(); // İlk yüklemede göster
        }

        // Başlık input'u için karakter sayacı
        const titleInput = document.querySelector('input[name="Title"]');
        if (titleInput) {
            const charCounter = document.createElement('div');
            charCounter.className = 'form-hint';
            charCounter.id = 'charCounter';
            charCounter.style.marginTop = '5px';
            titleInput.parentNode.appendChild(charCounter);

            function updateCharCounter() {
                const maxLength = 100; // Varsayılan maksimum uzunluk
                const currentLength = titleInput.value.length;
                const remaining = maxLength - currentLength;

                if (remaining < 0) {
                    charCounter.style.color = 'var(--danger-color)';
                    charCounter.textContent = `Maksimum karakter aşıldı! (${currentLength}/${maxLength})`;
                } else if (remaining < 20) {
                    charCounter.style.color = 'var(--warning-color)';
                    charCounter.textContent = `${remaining} karakter kaldı (${currentLength}/${maxLength})`;
                } else {
                    charCounter.style.color = 'var(--text-light)';
                    charCounter.textContent = `${remaining} karakter kaldı (${currentLength}/${maxLength})`;
                }
            }

            titleInput.addEventListener('input', updateCharCounter);
            updateCharCounter(); // İlk yüklemede göster

            // Maksimum uzunluk sınırı koy
            titleInput.maxLength = 100;
        }
    });
</script>

