@model OnlineSinavSistemi.Models.Exam

@{
    ViewData["Title"] = "Yeni Sýnav Oluþtur";
}

<div class="container-fluid py-5">
    <!-- Baþlýk -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-plus-circle display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Yeni Sýnav Oluþtur</h1>
                    <p class="text-muted mb-0">Yeni bir sýnav oluþturun ve soru eklemeye geçin</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Form Kartý -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-file-earmark-plus me-2"></i>Sýnav Bilgileri
                    </h4>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span></span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <!-- Sýnav Baþlýðý -->
                        <div class="mb-4">
                            <label class="form-label fw-bold mb-2">
                                <i class="bi bi-card-heading me-1"></i>Sýnav Baþlýðý
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-pencil text-primary"></i>
                                </span>
                                <input asp-for="Title"
                                       class="form-control border-start-0"
                                       placeholder="Örn: Matematik Vize Sýnavý, Fizik Final Sýnavý, vb."
                                       required />
                            </div>
                            <span asp-validation-for="Title" class="text-danger mt-1"></span>
                        </div>

                        <!-- Süre ve Ders Seçimi -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold mb-2">
                                    <i class="bi bi-stopwatch me-1"></i>Süre (Dakika)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-clock text-primary"></i>
                                    </span>
                                    <input asp-for="DurationMinutes"
                                           type="number"
                                           class="form-control border-start-0"
                                           value="40"
                                           required />
                                    <span class="input-group-text">dk</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger mt-1"></span>
                                <small class="text-muted mt-1 d-block">
                                    <i class="bi bi-info-circle me-1"></i>Sýnav süresini dakika cinsinden girin.
                                </small>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold mb-2">
                                    <i class="bi bi-book me-1"></i>Ders
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-journal text-primary"></i>
                                    </span>
                                    <select asp-for="CourseId"
                                            asp-items="@ViewBag.Dersler"
                                            class="form-control border-start-0"
                                            required>
                                        <option value="">-- Ders Seçiniz --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="CourseId" class="text-danger mt-1"></span>
                            </div>
                        </div>

                        <!-- Bilgilendirme -->
                        <div class="alert alert-info border-0 rounded-3 mb-4">
                            <div class="d-flex">
                                <i class="bi bi-lightbulb-fill text-primary fs-4 me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Sýnav Oluþturma Hakkýnda</h6>
                                    <p class="mb-0">
                                        • Sýnav oluþturduktan sonra soru ekleyebilirsiniz.<br>
                                        • Sýnavý istediðiniz zaman yayýnlayabilir veya yayýndan kaldýrabilirsiniz.<br>
                                        • Sýnav baþlýðý en az 5 karakter olmalýdýr.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3">
                                <i class="bi bi-plus-circle me-2"></i>Sýnavý Oluþtur ve Soru Eklemeye Geç
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg py-3">
                                <i class="bi bi-x-circle me-2"></i>Ýptal
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-3">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-clock-history me-1"></i>
                            Sýnav oluþturma iþlemi anýnda gerçekleþir.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Hýzlý Ýþlemler -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="text-center">
                        <p class="text-muted mb-3">Hýzlý Ýþlemler</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-list-ul me-2"></i>Tüm Sýnavlar
                            </a>
                            <a asp-controller="Course" asp-action="Index" class="btn btn-outline-success">
                                <i class="bi bi-journal-plus me-2"></i>Ders Ekle
                            </a>
                            <a asp-controller="Question" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-question-circle me-2"></i>Soru Bankasý
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

        .btn-success:hover {
            background-color: #157347;
            border-color: #146c43;
        }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }

    .btn-outline-success {
        border-color: #198754;
        color: #198754;
    }

        .btn-outline-success:hover {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}