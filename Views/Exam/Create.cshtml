@model OnlineSinavSistemi.Models.Exam
@{
    ViewData["Title"] = "Yeni Sýnav Oluþtur";
}

<h2>Yeni Sýnav Oluþtur</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Baslik"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SureDakika"></label>
        <input asp-for="SureDakika" class="form-control" type="number" />
        <span asp-validation-for="SureDakika" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Ders Seç</label>
        <select asp-for="CourseId" asp-items="ViewBag.Dersler" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Oluþtur</button>
</form>
