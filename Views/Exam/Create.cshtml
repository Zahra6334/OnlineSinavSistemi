@model OnlineSinavSistemi.Models.Exam

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Yeni Sýnav Oluþtur</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label class="form-label fw-bold">Sýnav Baþlýðý</label>
                    <input asp-for="Title" class="form-control" placeholder="Örn: Matematik Vize Sýnavý" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Süre (Dakika)</label>
                        <input asp-for="DurationMinutes" type="number" class="form-control" value="40" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Ders</label>
                        <select asp-for="CourseId" asp-items="@ViewBag.Dersler" class="form-control" required>
                            <option value="">-- Ders Seçiniz --</option>
                        </select>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fa fa-save"></i> Sýnavý Oluþtur ve Soru Eklemeye Geç
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Ýptal</a>
                </div>
            </form>
        </div>
    </div>
</div>