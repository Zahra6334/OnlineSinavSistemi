@model OnlineSinavSistemi.Models.Exam

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
        --success-color: #28a745;
        --error-color: #dc3545;
    }

    .exam-create-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 0;
    }

    .exam-card {
        background: var(--white);
        border-radius: 20px; /* Kenarlara yapıştığı için border-radius kaldırılıyor */
        box-shadow: var(--shadow);
        border: 2px solid transparent;
        transition: var(--transition);
        overflow: hidden;
        width: 100%;
        margin: 0;
        min-height: 100vh; /* Kart da tüm sayfayı kaplasın */
    }

    

        .exam-card:hover {
            box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
            border-color: var(--primary-color);
        }

    .exam-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        padding: 30px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .exam-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 Q500,100 1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: bottom;
        }

        .exam-header h2 {
            font-size: 2.2rem;
            font-weight: 800;
            margin: 0;
            position: relative;
            z-index: 1;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        }

    .exam-body {
        padding: 40px;
    }

    .form-label {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 10px;
        display: block;
        font-size: 1.1rem;
    }

    .form-control, .form-select {
        border: 2px solid #e1e8f0;
        border-radius: 12px;
        padding: 14px 18px;
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            outline: none;
        }

        .form-control:hover, .form-select:hover {
            border-color: #b8c4d4;
        }

    .btn-submit {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: white;
        padding: 16px 40px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        margin: 10px 0;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(44, 90, 160, 0.3);
            color: white;
        }

    .btn-cancel {
        background: transparent;
        color: var(--text-light);
        padding: 16px 40px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: 2px solid #e1e8f0;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        margin: 10px 0;
        text-decoration: none;
    }

        .btn-cancel:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .required-badge {
        color: var(--error-color);
        font-size: 0.9rem;
        font-weight: normal;
    }

    .form-hint {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
        font-style: italic;
    }

    .validation-message {
        color: var(--error-color);
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
        animation: slideIn 0.3s ease;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .duration-input {
        position: relative;
    }

        .duration-input::after {
            content: "dakika";
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-weight: 500;
        }

    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .exam-body {
            padding: 25px;
        }

        .exam-header h2 {
            font-size: 1.8rem;
        }

        .btn-submit, .btn-cancel {
            padding: 14px 20px;
        }
    }
</style>

<div class="exam-create-section">
    <div class="container">
        <div class="exam-card">
            <div class="exam-header">
                <h2>📝 Yeni Sınav Oluştur</h2>
            </div>

            <div class="exam-body">
                <form asp-action="Create" method="post" id="examForm">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-heading"></i> Sınav Başlığı
                            <span class="required-badge">*</span>
                        </label>
                        <div class="input-group">
                            <input asp-for="Title"
                                   class="form-control"
                                   placeholder="Örn: Matematik Vize Sınavı - 2024"
                                   required />
                            <div class="input-icon">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Title" class="validation-message"></span>
                        <span class="form-hint">Sınavınızı tanımlayıcı bir başlık giriniz</span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i> Sınav Süresi
                                <span class="required-badge">*</span>
                            </label>
                            <div class="input-group duration-input">
                                <input asp-for="DurationMinutes"
                                       type="number"
                                       class="form-control"
                                       value="40"
                                       min="5"
                                       max="240"
                                       required />
                            </div>
                            <span asp-validation-for="DurationMinutes" class="validation-message"></span>
                            <span class="form-hint">5-240 dakika arasında bir değer giriniz</span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-book"></i> Ders
                                <span class="required-badge">*</span>
                            </label>
                            <div class="input-group">
                                <select asp-for="CourseId"
                                        asp-items="@ViewBag.Dersler"
                                        class="form-select"
                                        required>
                                    <option value="">-- Ders Seçiniz --</option>
                                </select>
                                <div class="input-icon">
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                            </div>
                            <span asp-validation-for="CourseId" class="validation-message"></span>
                            <span class="form-hint">Sınavı hangi ders için oluşturuyorsunuz?</span>
                        </div>
                    </div>

                    <div class="d-grid gap-3">
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-save"></i>
                            <span>Sınavı Oluştur ve Soru Eklemeye Geç</span>
                        </button>

                        <a asp-action="Index" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            <span>İptal Et</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
       
        const form = document.getElementById('examForm');
        form.style.opacity = '0';
        form.style.transform = 'translateY(20px)';

        setTimeout(() => {
            form.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            form.style.opacity = '1';
            form.style.transform = 'translateY(0)';
        }, 300);

        
        const inputs = document.querySelectorAll('.form-control, .form-select');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });

            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });

        
        const submitBtn = document.querySelector('.btn-submit');
        form.addEventListener('submit', function(e) {
            if (form.checkValidity()) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Oluşturuluyor...</span>';
                submitBtn.disabled = true;
            }
        });
    });
</script>