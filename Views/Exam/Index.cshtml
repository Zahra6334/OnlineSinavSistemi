@model IEnumerable<OnlineSinavSistemi.Models.Exam>
    @{
    ViewBag.Title = "Sınavlarım";
    }

    <h2>Sınavlarım</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Sınav Oluştur</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Ders</th>
                <th>Başlangıç Tarihi</th>
                <th>Süre</th>
                <th>Yayın Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var exam in Model)
        {
            <tr>
                <td>@exam.Baslik</td>
                <td>@exam.Course.DersAdi</td>
                <td>@exam.BaslangicTarihi.ToString("g")</td>
                <td>@exam.SureDakika dk</td>
                <td>@(exam.Yayinlandi ? "Yayınlandı" : "Taslak")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-sm btn-danger">Sil</a>
                    @if(!exam.Yayinlandi)
                    {
                    <a asp-action="Publish" asp-route-id="@exam.Id" class="btn btn-sm btn-success">Yayınla</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
