@model IEnumerable<OnlineSinavSistemi.Models.Exam>
@{
    ViewData["Title"] = "Sınavlar";
    int foreachIndex = 0;
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .exams-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        color: var(--primary-color);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background: var(--accent-color);
            border-radius: 2px;
        }

    .page-subtitle {
        color: var(--text-light);
        font-size: 1.1rem;
        margin-top: 20px;
    }

    .create-exam-btn {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
    }

        .create-exam-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(44, 90, 160, 0.3);
            color: white;
        }

    .exams-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 40px;
    }

    .exam-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        border: 2px solid transparent;
        transition: var(--transition);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .exam-card:hover {
            transform: translateY(-8px);
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
        }

    .exam-card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        padding: 25px;
        position: relative;
        overflow: hidden;
        min-height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .exam-card-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 Q500,100 1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: bottom;
        }

    .exam-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        position: relative;
        z-index: 1;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .exam-course {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
        opacity: 0.9;
        position: relative;
        z-index: 1;
    }

    .exam-card-body {
        padding: 25px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .exam-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .detail-icon {
        width: 40px;
        height: 40px;
        background: var(--secondary-color);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        display: block;
        color: var(--text-light);
        font-size: 0.85rem;
        margin-bottom: 2px;
    }

    .detail-value {
        display: block;
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 10px;
        align-self: flex-start;
    }

    .status-published {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
        border: 1px solid rgba(40, 167, 69, 0.2);
    }

    .status-unpublished {
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
        border: 1px solid rgba(108, 117, 125, 0.2);
    }

    .exam-card-footer {
        padding: 0 25px 25px 25px;
        margin-top: auto;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        flex: 1;
        min-width: 80px;
        padding: 12px 15px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        text-align: center;
    }

    .btn-edit {
        background: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

        .btn-edit:hover {
            background: var(--warning-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }

    .btn-details {
        background: rgba(23, 162, 184, 0.1);
        color: var(--info-color);
        border: 1px solid rgba(23, 162, 184, 0.2);
    }

        .btn-details:hover {
            background: var(--info-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
        }

    .btn-delete {
        background: rgba(231, 76, 60, 0.1);
        color: var(--danger-color);
        border: 1px solid rgba(231, 76, 60, 0.2);
    }

        .btn-delete:hover {
            background: var(--danger-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
        }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        background: rgba(233, 242, 249, 0.5);
        border-radius: 20px;
        border: 2px dashed #c0d4e8;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #c0d4e8;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: var(--text-light);
        margin-bottom: 15px;
        font-size: 1.5rem;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto 30px;
        font-size: 1.1rem;
    }

    .stats-bar {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .filter-section {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 25px;
        box-shadow: var(--shadow);
    }

    .filter-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 1.1rem;
    }

    .filter-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: var(--secondary-color);
        color: var(--text-light);
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 500;
        border: none;
        transition: var(--transition);
        cursor: pointer;
    }

        .filter-btn.active {
            background: var(--primary-color);
            color: white;
        }

        .filter-btn:hover {
            transform: translateY(-2px);
        }

    .search-box {
        position: relative;
        margin-bottom: 20px;
    }

    .search-input {
        width: 100%;
        padding: 15px 50px 15px 20px;
        border: 2px solid #e1e8f0;
        border-radius: 50px;
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
    }

        .search-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            outline: none;
        }

    .search-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    @@media (max-width: 768px) {
        .exams-grid

    {
        grid-template-columns: 1fr;
    }

    .exam-details {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .page-title {
        font-size: 2rem;
    }

    .stats-bar {
        grid-template-columns: repeat(2, 1fr);
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-action {
        width: 100%;
    }

    }

    @@media (max-width: 480px) {
        .stats-bar

    {
        grid-template-columns: 1fr;
    }

    .filter-buttons {
        flex-direction: column;
    }

    .filter-btn {
        width: 100%;
    }

    }

    /* Animasyonlar */
    .exam-card {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="exams-section">
    <div class="container">
        <!-- Sayfa Başlığı -->
        <div class="page-header">
            <h1 class="page-title">Sınavlarım</h1>
            <p class="page-subtitle">Oluşturduğunuz tüm sınavları buradan yönetebilirsiniz.</p>

            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mt-4">
                <a asp-action="Create" class="create-exam-btn">
                    <i class="fas fa-plus-circle"></i>
                    <span>Yeni Sınav Oluştur</span>
                </a>

                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Sınav ara..." id="searchInput">
                    <div class="search-icon">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- İstatistikler -->
        @{
            var publishedCount = Model.Count(e => e.IsPublished);
            var unpublishedCount = Model.Count(e => !e.IsPublished);
            var totalCount = Model.Count();
        }

        <div class="stats-bar">
            <div class="stat-item">
                <span class="stat-number">@totalCount</span>
                <span class="stat-label">Toplam Sınav</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@publishedCount</span>
                <span class="stat-label">Yayında</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@unpublishedCount</span>
                <span class="stat-label">Yayınlanmamış</span>
            </div>
            @if (totalCount > 0)
            {
                <div class="stat-item">
                    <span class="stat-number">%@((publishedCount * 100) / totalCount)</span>
                    <span class="stat-label">Yayın Oranı</span>
                </div>
            }
        </div>

        <!-- Filtreler -->
        <div class="filter-section">
            <div class="filter-title">
                <i class="fas fa-filter"></i> Sınavları Filtrele
            </div>
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">
                    <i class="fas fa-list"></i> Tümü (@totalCount)
                </button>
                <button class="filter-btn" data-filter="published">
                    <i class="fas fa-eye"></i> Yayında (@publishedCount)
                </button>
                <button class="filter-btn" data-filter="unpublished">
                    <i class="fas fa-eye-slash"></i> Yayınlanmamış (@unpublishedCount)
                </button>
            </div>
        </div>

        <!-- Sınav Kartları Grid -->
        <div class="exams-grid">
            @if (Model.Any())
            {
                @foreach (var exam in Model)
                {
                    <div class="exam-card"
                         data-exam-id="@exam.Id"
                         data-title="@exam.Title.ToLower()"
                         data-published="@exam.IsPublished.ToString().ToLower()"
                         style="animation-delay: @(foreachIndex * 0.1);">

                        <div class="exam-card-header">
                            <h3 class="exam-title">@exam.Title</h3>
                            <div class="exam-course">
                                <i class="fas fa-book"></i>
                                <span>@exam.Course?.CourseName</span>
                            </div>
                        </div>

                        <div class="exam-card-body">
                            <div class="exam-details">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="detail-content">
                                        <span class="detail-label">SÜRE</span>
                                        <span class="detail-value">@exam.DurationMinutes dakika</span>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="detail-content">
                                        <span class="detail-label">BAŞLANGIÇ</span>
                                        <span class="detail-value">@exam.StartDate.ToString("dd/MM HH:mm")</span>
                                    </div>
                                </div>
                            </div>

                            <span class="status-badge @(exam.IsPublished ? "status-published" : "status-unpublished")">
                                <i class="fas @(exam.IsPublished ? "fa-check-circle" : "fa-times-circle")"></i>
                                @(exam.IsPublished ? "Yayınlandı" : "Yayınlanmadı")
                            </span>
                        </div>

                        <div class="exam-card-footer">
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@exam.Id" class="btn-action btn-edit">
                                    <i class="fas fa-edit"></i>
                                    <span>Düzenle</span>
                                </a>
                                <a asp-action="Details" asp-route-id="@exam.Id" class="btn-action btn-details">
                                    <i class="fas fa-info-circle"></i>
                                    <span>Detay</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@exam.Id" class="btn-action btn-delete">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Sil</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    // Index değişkenini artır
                    
                    foreachIndex++;
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <h3>Henüz Sınavınız Yok</h3>
                    <p>İlk sınavınızı oluşturarak öğrencileriniz için sınav hazırlamaya başlayabilirsiniz.</p>
                    <a asp-action="Create" class="create-exam-btn">
                        <i class="fas fa-plus-circle"></i>
                        <span>İlk Sınavını Oluştur</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

