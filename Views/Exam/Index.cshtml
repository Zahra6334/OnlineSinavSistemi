@model IEnumerable<OnlineSinavSistemi.Models.Exam>
@{
    ViewData["Title"] = "Sınavlar";

    // Sayfalandırma değişkenleri (Controller'dan geliyor)
    var pageNumber = ViewBag.PageNumber ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var hasPreviousPage = ViewBag.HasPreviousPage ?? false;
    var hasNextPage = ViewBag.HasNextPage ?? false;
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">
                        <i class="bi bi-clipboard-data text-primary me-2"></i>Sınavlarım
                    </h1>
                    <p class="text-muted mb-0">Tüm sınavlarınızı buradan yönetebilirsiniz</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Sınav Oluştur
                </a>
            </div>
            <div class="border-bottom mt-4"></div>
        </div>
    </div>

    <!-- Tablo -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-table me-2"></i>Sınav Listesi
                        @if (Model.Any())
                        {
                            <span class="badge bg-light text-dark ms-2">Toplam @ViewBag.TotalCount kayıt</span>
                        }
                    </h5>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">
                                            <i class="bi bi-card-heading me-1"></i>Başlık
                                        </th>
                                        <th>
                                            <i class="bi bi-book me-1"></i>Ders
                                        </th>
                                        <th>
                                            <i class="bi bi-stopwatch me-1"></i>Süre (dk)
                                        </th>
                                        <th>
                                            <i class="bi bi-calendar me-1"></i>Başlangıç
                                        </th>
                                        <th>
                                            <i class="bi bi-broadcast me-1"></i>Yayın Durumu
                                        </th>
                                        <th class="pe-4">
                                            <i class="bi bi-gear me-1"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var exam in Model)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@exam.Title</td>
                                            <td>@exam.Course?.CourseName</td>
                                            <td>
                                                <span class="badge bg-primary rounded-pill">@exam.DurationMinutes dk</span>
                                            </td>
                                            <td>@exam.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (exam.IsPublished)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>Yayınlandı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-clock me-1"></i>Yayınlanmadı
                                                    </span>
                                                }
                                            </td>
                                            <td class="pe-4">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Edit" asp-route-id="@exam.Id"
                                                       class="btn btn-warning text-white" title="Düzenle">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@exam.Id"
                                                       class="btn btn-info text-white" title="Detay">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@exam.Id"
                                                       class="btn btn-danger" title="Sil"
                                                       onclick="return confirm('Bu sınavı silmek istediğinize emin misiniz?')">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark-text display-1 text-muted opacity-25 mb-3"></i>
                            <h3 class="text-muted">Henüz sınav oluşturulmamış</h3>
                            <p class="text-muted mb-4">İlk sınavınızı oluşturmak için aşağıdaki butonu kullanın</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle me-2"></i>İlk Sınavınızı Oluşturun
                            </a>
                        </div>
                    }
                </div>

                <!-- Sayfalandırma -->
                @if (Model.Any() && totalPages > 1)
                {
                    <div class="card-footer bg-transparent border-top p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    Sayfa @pageNumber / @totalPages -
                                    Toplam @ViewBag.TotalCount kayıt
                                </small>
                            </div>

                            <nav aria-label="Sınav sayfalandırma">
                                <ul class="pagination mb-0">
                                    <!-- Önceki sayfa butonu -->
                                    <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                        <a class="page-link"
                                           href="@(hasPreviousPage ? $"?page={pageNumber - 1}" : "#")"
                                           aria-label="Önceki">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    <!-- Sayfa numaraları -->
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                                        {
                                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                                <a class="page-link" href="?page=@i">@i</a>
                                            </li>
                                        }
                                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                                        {
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#">...</a>
                                            </li>
                                        }
                                    }

                                    <!-- Sonraki sayfa butonu -->
                                    <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                        <a class="page-link"
                                           href="@(hasNextPage ? $"?page={pageNumber + 1}" : "#")"
                                           aria-label="Sonraki">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bilgilendirme -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-2">Sınav Yönetimi Hakkında</h5>
                        <p class="mb-0">
                            • Sınavları oluşturduktan sonra yayınlayabilirsiniz.<br>
                            • Her sınav için soru ekleyebilir ve düzenleyebilirsiniz.<br>
                            • Sınav silme işlemi geri alınamaz, lütfen dikkatli olun.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05) !important;
    }

    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        border-bottom: 1px solid #dee2e6;
        vertical-align: middle;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .page-item.active .page-link {
        background-color: #667eea;
        border-color: #667eea;
    }

    .page-link {
        color: #667eea;
    }

        .page-link:hover {
            color: #667eea;
        }

    .page-item.disabled .page-link {
        color: #6c757d;
    }
</style>