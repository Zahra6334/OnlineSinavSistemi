@model IEnumerable<OnlineSinavSistemi.Models.Exam>
@{
    ViewData["Title"] = "Sınavlar";
}

<h2>Sınavlarım</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Sınav Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Ders</th>
            <th>Süre (dk)</th>
            <th>Başlangıç</th>
            <th>Yayın Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Title</td>
                <td>@exam.Course?.CourseName</td>
                <td>@exam.DurationMinutes</td>
                <td>@exam.StartDate.ToString("g")</td>
                <td>@(exam.IsPublished ? "Yayınlandı" : "Yayınlanmadı")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
