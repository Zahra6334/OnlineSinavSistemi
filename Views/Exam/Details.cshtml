@model OnlineSinavSistemi.Models.Exam
@{
    ViewData["Title"] = "Sýnav Detaylarý";
    var students = ViewBag.Students as IEnumerable<OnlineSinavSistemi.Models.ApplicationUser>;
}

<h2>@Model.Title</h2>


<div class="mb-3">
    <p><strong>Ders:</strong> @Model.Course?.CourseName</p>
    <p><strong>Süre:</strong> @Model.DurationMinutes dakika</p>
    <p><strong>Baþlangýç Tarihi:</strong> @Model.StartDate.ToString("g")</p>
    <p><strong>Yayýn Durumu:</strong> @(Model.IsPublished ? "Yayýnlandý" : "Yayýnlanmadý")</p>
</div>

<!-- Yayýnla / Yayýndan Kaldýr Butonu -->
<form asp-action="TogglePublish" method="post" class="mb-4">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">
        @(Model.IsPublished ? "Yayýndan Kaldýr" : "Yayýnla")
    </button>
</form>

<h3>Öðrenciler ve Sýnav Durumlarý</h3>

@if (students != null && students.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Numara</th>
                <th>Ad Soyad</th>
                <th>Baþlangýç Tarihi</th>
                <th>Bitiþ Tarihi</th>
                <th>Tamamlandý</th>
                <th>Puan</th>
                <th>Puan Paylaþýldý</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in students)
            {
                var studentExam = s.StudentExams.FirstOrDefault(se => se.ExamId == Model.Id);
                <tr>
                    <td>@s.Numara</td>
                    <td>@s.full_name</td>
                    <td>@studentExam?.StartTime.ToString("g")</td>
                    <td>@studentExam?.EndTime?.ToString("g")</td>
                    <td>@(studentExam != null ? (studentExam.Completed ? "Evet" : "Hayýr") : "-")</td>
                    <td>@studentExam?.Score?.ToString("F2")</td>
                    <td>@(studentExam != null ? (studentExam.ScoreShared ? "Evet" : "Hayýr") : "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz öðrenci yok veya öðrenciler sýnava katýlmadý.</p>
}

<!-- Sayfa sonundaki geri butonu -->
<button type="button" class="btn btn-secondary equal-btn" onclick="history.back()">Geri</button>
