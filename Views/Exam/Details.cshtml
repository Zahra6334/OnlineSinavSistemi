<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tablo satırlarına tıklanabilirlik efekti
        const tableRows = document.querySelectorAll('.modern-table tbody tr');
        tableRows.forEach(row => {
            row.style.cursor = 'pointer';
            row.addEventListener('click', function(e) {
                // Eğer tıklanan element bir buton değilse
                if (!e.target.closest('a, button')) {
                    this.style.backgroundColor = 'rgba(44, 90, 160, 0.05)';
                    setTimeout(() => {
                        this.style.backgroundColor = '';
                    }, 200);
                }
            });
        });

        // Animasyonlar
        const cards = document.querySelectorAll('.details-container, .exam-header-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 300 + (index * 200));
        });

        // Tablo satırları animasyonu
        const tableRowsAnimated = document.querySelectorAll('.modern-table tbody tr');
        tableRowsAnimated.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.transform = 'translateX(-20px)';

            setTimeout(() => {
                row.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                row.style.opacity = '1';
                row.style.transform = 'translateX(0)';
            }, 400 + (index * 50));
        });

        // Yayın butonu için onay dialog'u
        const toggleForm = document.querySelector('form[asp-action="TogglePublish"]');
            if (toggleForm) {
        toggleForm.addEventListener('submit', function(e) {
            e.preventDefault();

            const isPublished = this.getAttribute('data-is-published') === 'true';
            const action = isPublished ? 'yayından kaldırmak' : 'yayınlamak';
            const message = isPublished ? 'görülememesine' : 'görülebilmesine';

            Swal.fire({
                title: 'Emin misiniz?',
                html: `
                    <div style="text-align: left; padding: 15px;">
                        <p>Sınavı <strong>${action}</strong> üzeresiniz.</p>
                        <p>@Model.Title</p>
                        <p>Bu işlem sınavın öğrenciler tarafından ${message} neden olacaktır.</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: isPublished ? '#6c757d' : '#28a745',
                cancelButtonColor: '#dc3545',
                confirmButtonText: isPublished ? 'Evet, Yayından Kaldır' : 'Evet, Yayınla',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    toggleForm.submit();
                }
            });
        });
    }
    });
</script>

