@model OnlineSinavSistemi.Models.Exam
@{
    ViewData["Title"] = "Sınav Detayları";
    var students = ViewBag.Students as IEnumerable<OnlineSinavSistemi.Models.ApplicationUser>;
    var studentExams = ViewBag.StudentExams as List<StudentExam>;
}

<h2>@Model.Title</h2>


<div class="mb-3">
    <p><strong>Ders:</strong> @Model.Course?.CourseName</p>
    <p><strong>Süre:</strong> @Model.DurationMinutes dakika</p>
    <p><strong>Başlangıç Tarihi:</strong> @Model.StartDate.ToString("g")</p>
    <p><strong>Yayın Durumu:</strong> @(Model.IsPublished ? "Yayınlandı" : "Yayınlanmadı")</p>
</div>

<form asp-controller="Teacher" asp-action="TogglePublish" method="post" class="mb-4">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">
        @(Model.IsPublished ? "Yayından Kaldır" : "Yayınla")
    </button>
</form>


<h3>Öğrenciler ve Sınav Durumları</h3>

@if (studentExams != null && studentExams.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Numara</th>
                <th>Ad Soyad</th>
                <th>Başlama</th>
                <th>Bitiş</th>
                <th>Tamamlandı</th>
                <th>Not</th>
            </tr>
        </thead>

        <tbody>
            @if (studentExams == null || !studentExams.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        ❗ Bu sınava atanmış öğrenci yok
                    </td>
                </tr>
            }
            else
            {
                foreach (var se in studentExams)
                {
                    <tr>
                        <td>@se.Student.Numara</td>
                        <td>@se.Student.full_name</td>
                        <td>@se.StartTime?.ToString("g")</td>
                        <td>@se.EndTime?.ToString("g")</td>
                        <td>@(se.Completed ? "Evet" : "Hayır")</td>
                        <td>@se.Score?.ToString("F2")</td>
                    </tr>
                }
            }
        </tbody>
    </table>

}
else
{
    <p>Henüz öğrenci yok veya öğrenciler sınava katılmadı.</p>
}

<!-- Sayfa sonundaki geri butonu -->
<button type="button" class="btn btn-secondary equal-btn" onclick="history.back()">Geri</button>
