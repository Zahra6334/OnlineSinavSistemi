@model OnlineSinavSistemi.Models.Exam
@using OnlineSinavSistemi.Models

@{
    ViewData["Title"] = "Sınav Detayları";
    var studentExams = ViewBag.StudentExams as List<StudentExam>;
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --info-color: #17a2b8;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .exam-details-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 40px 0;
    }

    .exam-header-card {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        position: relative;
        overflow: hidden;
    }

        .exam-header-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 Q500,100 1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: bottom;
        }

    .exam-title {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .exam-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        margin-top: 20px;
        position: relative;
        z-index: 1;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .meta-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .meta-content {
        display: flex;
        flex-direction: column;
    }

    .meta-label {
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .meta-value {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .details-container {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        padding: 30px;
        margin-bottom: 30px;
        border: 2px solid transparent;
        transition: var(--transition);
    }

        .details-container:hover {
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
        }

    .section-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 25px;
        font-size: 1.6rem;
        display: flex;
        align-items: center;
        gap: 10px;
        border-bottom: 2px solid var(--secondary-color);
        padding-bottom: 10px;
    }

        .section-title i {
            color: var(--accent-color);
        }

    .status-badge {
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: 2px solid transparent;
    }

    .status-published {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
        border-color: var(--success-color);
    }

    .status-unpublished {
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
        border-color: #6c757d;
    }

    .btn-toggle {
        background: linear-gradient(135deg, var(--accent-color) 0%, #b8941f 100%);
        color: var(--white);
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .btn-toggle:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(212, 175, 55, 0.3);
            color: var(--white);
        }

    .btn-secondary-custom {
        background: transparent;
        color: var(--text-light);
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        border: 2px solid #e1e8f0;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-secondary-custom:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

    /* Tablo Stilleri */
    .students-table-container {
        overflow-x: auto;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .modern-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: var(--white);
        border-radius: 15px;
        overflow: hidden;
    }

        .modern-table thead {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
            color: var(--white);
        }

        .modern-table th {
            padding: 18px 15px;
            font-weight: 600;
            text-align: left;
            border: none;
            position: relative;
        }

            .modern-table th:not(:last-child)::after {
                content: "";
                position: absolute;
                right: 0;
                top: 20%;
                height: 60%;
                width: 1px;
                background: rgba(255, 255, 255, 0.2);
            }

        .modern-table tbody tr {
            transition: var(--transition);
            border-bottom: 1px solid #f0f0f0;
        }

            .modern-table tbody tr:hover {
                background: rgba(44, 90, 160, 0.03);
                transform: translateX(5px);
            }

        .modern-table td {
            padding: 18px 15px;
            border: none;
            vertical-align: middle;
        }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .status-completed {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .status-not-completed {
        background: rgba(231, 76, 60, 0.1);
        color: var(--danger-color);
    }

    .btn-view-answers {
        background: rgba(44, 90, 160, 0.1);
        color: var(--primary-color);
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 600;
        border: 1px solid rgba(44, 90, 160, 0.2);
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        text-decoration: none;
    }

        .btn-view-answers:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
        }

    .score-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.95rem;
        min-width: 70px;
        text-align: center;
    }

    .score-high {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
        border: 1px solid rgba(40, 167, 69, 0.2);
    }

    .score-medium {
        background: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

    .score-low {
        background: rgba(231, 76, 60, 0.1);
        color: var(--danger-color);
        border: 1px solid rgba(231, 76, 60, 0.2);
    }

    .score-na {
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
        border: 1px solid rgba(108, 117, 125, 0.2);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: rgba(233, 242, 249, 0.5);
        border-radius: 15px;
        border: 2px dashed #c0d4e8;
    }

    .empty-state-icon {
        font-size: 3.5rem;
        color: #c0d4e8;
        margin-bottom: 20px;
    }

    .empty-state h4 {
        color: var(--text-light);
        margin-bottom: 10px;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 25px;
    }

    .student-count {
        background: var(--white);
        border-radius: 15px;
        padding: 15px 25px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .student-count-icon {
        width: 50px;
        height: 50px;
        background: var(--secondary-color);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--primary-color);
    }

    .student-count-info h5 {
        margin: 0;
        color: var(--text-light);
        font-size: 0.95rem;
    }

    .student-count-number {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    @@media (max-width: 768px) {
        .exam-title

    {
        font-size: 1.8rem;
    }

    .exam-meta {
        gap: 15px;
    }

    .meta-item {
        flex: 0 0 calc(50% - 15px);
    }

    .modern-table {
        font-size: 0.9rem;
    }

        .modern-table th,
        .modern-table td {
            padding: 12px 10px;
        }

    .action-buttons {
        flex-direction: column;
    }

    .btn-toggle,
    .btn-secondary-custom {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 576px) {
        .meta-item

    {
        flex: 0 0 100%;
    }

    .exam-header-card {
        padding: 20px;
    }

    .details-container {
        padding: 20px;
    }

    }
</style>

<div class="exam-details-section">
    <div class="container">
        <!-- Hero Başlık -->
        <div class="exam-header-card">
            <h1 class="exam-title">
                <i class="fas fa-file-alt"></i> @Model.Title
            </h1>

            <div class="exam-meta">
                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="meta-content">
                        <span class="meta-label">DERS</span>
                        <span class="meta-value">@Model.Course?.CourseName</span>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="meta-content">
                        <span class="meta-label">SÜRE</span>
                        <span class="meta-value">@Model.DurationMinutes dakika</span>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="meta-content">
                        <span class="meta-label">BAŞLANGIÇ</span>
                        <span class="meta-value">@Model.StartDate.ToString("dd MMMM yyyy HH:mm")</span>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-bullhorn"></i>
                    </div>
                    <div class="meta-content">
                        <span class="meta-label">DURUM</span>
                        <span class="meta-value">
                            <span class="status-badge @(Model.IsPublished ? "status-published" : "status-unpublished")">
                                <i class="fas @(Model.IsPublished ? "fa-check-circle" : "fa-times-circle")"></i>
                                @(Model.IsPublished ? "Yayınlandı" : "Yayınlanmadı")
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yayın Kontrolü -->
        <div class="details-container">
            <h3 class="section-title">
                <i class="fas fa-sliders-h"></i> Sınav Yayın Kontrolü
            </h3>

            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="mb-0">
                        @if (Model.IsPublished)
                        {
                            <span>Bu sınav şu anda <strong class="text-success">öğrencilere görünür durumda</strong>. Yayından kaldırmak için aşağıdaki butonu kullanabilirsiniz.</span>
                        }
                        else
                        {
                            <span>Bu sınav şu anda <strong class="text-secondary">öğrencilere görünmüyor</strong>. Yayınlamak için aşağıdaki butonu kullanabilirsiniz.</span>
                        }
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <form asp-controller="Teacher" asp-action="TogglePublish" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn-toggle">
                            <i class="fas @(Model.IsPublished ? "fa-eye-slash" : "fa-eye")"></i>
                            @(Model.IsPublished ? "Yayından Kaldır" : "Sınavı Yayınla")
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Öğrenci İstatistikleri -->
        @if (studentExams != null && studentExams.Any())
        {
            <div class="student-count">
                <div class="student-count-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="student-count-info">
                    <h5>SINAVA KATILAN ÖĞRENCİLER</h5>
                    <div class="student-count-number">
                        @studentExams.Count() Öğrenci
                    </div>
                </div>
            </div>
        }

        <!-- Öğrenci Listesi -->
        <div class="details-container">
            <h3 class="section-title">
                <i class="fas fa-user-graduate"></i> Öğrenci Sınav Durumları
            </h3>

            @if (studentExams != null && studentExams.Any())
            {
                <div class="students-table-container">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-id-card"></i> NUMARA</th>
                                <th><i class="fas fa-user"></i> AD SOYAD</th>
                                <th><i class="fas fa-play-circle"></i> BAŞLAMA</th>
                                <th><i class="fas fa-stop-circle"></i> BİTİŞ</th>
                                <th><i class="fas fa-check-circle"></i> DURUM</th>
                                <th><i class="fas fa-star"></i> NOT</th>
                                <th><i class="fas fa-cogs"></i> İŞLEMLER</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var se in studentExams)
                            {
                                <tr>
                                    <td>
                                        <strong>@se.Student.Numara</strong>
                                    </td>
                                    <td>
                                        <strong>@se.Student.full_name</strong>
                                    </td>
                                    <td>
                                        @if (se.StartTime.HasValue)
                                        {
                                            <span>@se.StartTime.Value.ToString("dd/MM HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (se.EndTime.HasValue)
                                        {
                                            <span>@se.EndTime.Value.ToString("dd/MM HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (se.Completed)
                                        {
                                            <span class="status-indicator status-completed">
                                                <i class="fas fa-check"></i> Tamamlandı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-indicator status-not-completed">
                                                <i class="fas fa-times"></i> Devam Ediyor
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (se.Score.HasValue)
                                        {
                                            var scoreClass = se.Score.Value >= 70 ? "score-high" :
                                            se.Score.Value >= 50 ? "score-medium" : "score-low";
                                            <span class="score-badge @scoreClass">
                                                @se.Score.Value.ToString("F1")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="score-badge score-na">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (se.Completed)
                                        {
                                            <a asp-controller="Answer"
                                               asp-action="Index"
                                               asp-route-studentExamId="@se.Id"
                                               class="btn-view-answers">
                                                <i class="fas @(se.Score.HasValue ? "fa-eye" : "fa-check-circle")"></i>
                                                @(se.Score.HasValue ? "Cevapları Gör" : "Not Ver")
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sınav devam ediyor</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-user-slash"></i>
                    </div>
                    <h4>Henüz Öğrenci Katılmadı</h4>
                    <p>Bu sınava henüz hiç öğrenci katılmadı. Öğrencilerin sınava katılabilmesi için sınavı yayınlayabilirsiniz.</p>
                    @if (!Model.IsPublished)
                    {
                        <form asp-controller="Teacher" asp-action="TogglePublish" method="post" data-is-published="@Model.IsPublished.ToString().ToLower()">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn-toggle">
                                <i class="fas @(Model.IsPublished ? "fa-eye-slash" : "fa-eye")"></i>
                                @(Model.IsPublished ? "Yayından Kaldır" : "Sınavı Yayınla")
                            </button>
                        </form>
                    }
                </div>
            }
        </div>

        <!-- Geri Dön Butonu -->
        <div class="action-buttons">
            <button type="button" class="btn-secondary-custom" onclick="history.back()">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </button>

            <a asp-action="Index" class="btn-secondary-custom">
                <i class="fas fa-list"></i> Tüm Sınavlara Dön
            </a>
        </div>
    </div>
</div>

