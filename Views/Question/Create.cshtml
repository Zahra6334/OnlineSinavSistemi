@model OnlineSinavSistemi.Models.Question

<h2>Yeni Soru Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ExamId" />

    <div>
        <label>Soru Metni</label>
        <input asp-for="SoruMetni" />
    </div>

    <div>
        <label>Tip</label>
        <select asp-for="Tip">
            <option value="0">Çoktan Seçmeli</option>
            <option value="1">Klasik</option>
        </select>
    </div>

    <div class="seceneklerContainer">
        <label>Þýklar (çoktan seçmeli için)</label>
        <input name="Choices[0].Metin" placeholder="Þýk 1" />
        <input name="Choices[1].Metin" placeholder="Þýk 2" />
        <input name="Choices[2].Metin" placeholder="Þýk 3" />
        <input name="Choices[3].Metin" placeholder="Þýk 4" />
    </div>

    <button type="submit">Soruyu Kaydet</button>
</form>
