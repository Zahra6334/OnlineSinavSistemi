@model OnlineSinavSistemi.Models.Question

@{
    ViewData["Title"] = "Soru Ekle";
}

<div class="container-fluid py-5">
    <!-- Baþlýk -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-question-circle display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Yeni Soru Ekle</h1>
                    <p class="text-muted mb-0">Sýnavýnýza yeni soru ekleyin</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Form Kartý -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Soru Bilgileri
                    </h4>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ExamId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span></span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <!-- Soru Metni -->
                        <div class="mb-4">
                            <label class="form-label fw-bold mb-2">
                                <i class="bi bi-chat-left-text me-1"></i>Soru Metni
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 align-items-start">
                                    <i class="bi bi-pencil text-primary mt-1"></i>
                                </span>
                                <textarea asp-for="QuestionText"
                                          class="form-control border-start-0"
                                          rows="4"
                                          placeholder="Soru metnini buraya yazýn..."
                                          required></textarea>
                            </div>
                            <span asp-validation-for="QuestionText" class="text-danger mt-1"></span>
                        </div>

                        <!-- Soru Puaný -->
                        <div class="mb-4">
                            <label class="form-label fw-bold mb-2">
                                <i class="bi bi-star me-1"></i>Soru Puaný
                            </label>
                            <div class="input-group" style="max-width: 200px;">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-123 text-primary"></i>
                                </span>
                                <input asp-for="Point"
                                       type="number"
                                       class="form-control border-start-0"
                                       min="0"
                                       step="1"
                                       required />
                                <span class="input-group-text">puan</span>
                            </div>
                            <span asp-validation-for="Point" class="text-danger mt-1"></span>
                        </div>

                        <!-- Soru Tipi -->
                        <div class="mb-4">
                            <label class="form-label fw-bold mb-2">
                                <i class="bi bi-list-check me-1"></i>Soru Tipi
                            </label>
                            <div class="input-group" style="max-width: 300px;">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-gear text-primary"></i>
                                </span>
                                <select asp-for="Type" class="form-control border-start-0" id="questionTypeSelect">
                                    <option value="0">Çoktan Seçmeli</option>
                                    <option value="1">Klasik</option>
                                </select>
                            </div>
                        </div>

                        <!-- Þýklar Alaný -->
                        <div id="choicesArea" class="border border-2 border-primary rounded-3 p-4 mb-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-list-ul text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold text-dark mb-0">Þýklar</h5>
                                    <small class="text-muted">Doðru cevabý yanýndaki kutucuðu iþaretleyerek belirtin.</small>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- A Þýkký -->
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-primary fs-6 me-2">A</span>
                                                <h6 class="fw-bold mb-0">A Þýkký</h6>
                                            </div>
                                            <input type="text"
                                                   name="Choices[0].Text"
                                                   class="form-control mb-2"
                                                   placeholder="A þýkký metnini girin" />
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       name="CorrectIndex"
                                                       value="0"
                                                       id="correctA">
                                                <label class="form-check-label text-success fw-bold" for="correctA">
                                                    <i class="bi bi-check-circle me-1"></i>Doðru Cevap
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- B Þýkký -->
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-primary fs-6 me-2">B</span>
                                                <h6 class="fw-bold mb-0">B Þýkký</h6>
                                            </div>
                                            <input type="text"
                                                   name="Choices[1].Text"
                                                   class="form-control mb-2"
                                                   placeholder="B þýkký metnini girin" />
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       name="CorrectIndex"
                                                       value="1"
                                                       id="correctB">
                                                <label class="form-check-label text-success fw-bold" for="correctB">
                                                    <i class="bi bi-check-circle me-1"></i>Doðru Cevap
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- C Þýkký -->
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-primary fs-6 me-2">C</span>
                                                <h6 class="fw-bold mb-0">C Þýkký</h6>
                                            </div>
                                            <input type="text"
                                                   name="Choices[2].Text"
                                                   class="form-control mb-2"
                                                   placeholder="C þýkký metnini girin" />
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       name="CorrectIndex"
                                                       value="2"
                                                       id="correctC">
                                                <label class="form-check-label text-success fw-bold" for="correctC">
                                                    <i class="bi bi-check-circle me-1"></i>Doðru Cevap
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- D Þýkký -->
                                <div class="col-md-6">
                                    <div class="card border h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-primary fs-6 me-2">D</span>
                                                <h6 class="fw-bold mb-0">D Þýkký</h6>
                                            </div>
                                            <input type="text"
                                                   name="Choices[3].Text"
                                                   class="form-control mb-2"
                                                   placeholder="D þýkký metnini girin" />
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       name="CorrectIndex"
                                                       value="3"
                                                       id="correctD">
                                                <label class="form-check-label text-success fw-bold" for="correctD">
                                                    <i class="bi bi-check-circle me-1"></i>Doðru Cevap
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3 text-center">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Sadece bir þýk doðru cevap olarak iþaretlenebilir.
                                </small>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-between mt-4 pt-3">
                            <a href="/Question/Index?examId=@Model.ExamId" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle me-2"></i>Soruyu Kaydet
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-3">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Çoktan seçmeli sorularda en az 2 þýk doldurulmalýdýr.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Hýzlý Ýþlemler -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="text-center">
                        <p class="text-muted mb-3">Hýzlý Ýþlemler</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/Question/Index?examId=@Model.ExamId" class="btn btn-outline-primary">
                                <i class="bi bi-list-ul me-2"></i>Tüm Sorular
                            </a>
                            <a asp-controller="Exam" asp-action="Details" asp-route-id="@Model.ExamId" class="btn btn-outline-success">
                                <i class="bi bi-eye-fill me-2"></i>Sýnav Detaylarý
                            </a>
                            <a asp-controller="Exam" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-clipboard-data me-2"></i>Tüm Sýnavlar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .card.border {
        transition: all 0.3s ease;
    }

        .card.border:hover {
            border-color: #667eea !important;
            box-shadow: 0 0.125rem 0.25rem rgba(102, 126, 234, 0.1);
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-color: #667eea;
            color: white;
        }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .form-check-input:focus {
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const questionTypeSelect = document.getElementById('questionTypeSelect');
        const choicesArea = document.getElementById('choicesArea');

        function toggleChoicesArea() {
            if (questionTypeSelect.value == "1") { // Klasik
                choicesArea.style.display = 'none';
            } else {
                choicesArea.style.display = 'block';
            }
        }

        // Ýlk yüklemede kontrol et
        toggleChoicesArea();

        // Deðiþiklik olduðunda kontrol et
        questionTypeSelect.addEventListener('change', toggleChoicesArea);
    });
</script>