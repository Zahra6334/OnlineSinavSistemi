@model OnlineSinavSistemi.Models.Question

<h2>Soru Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ExamId" />

    <div class="form-group">
        <label>Soru Metni</label>
        <input asp-for="SoruMetni" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tip</label>
        <select asp-for="Tip" class="form-control">
            <option value="0">Çoktan Seçmeli</option>
            <option value="1">Klasik</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Soru Ekle</button>
    <a asp-controller="Exam" asp-action="Index" class="btn btn-secondary">Sýnavlar</a>
</form>
