@model OnlineSinavSistemi.Models.Question
@{
    ViewBag.Title = "Yeni Soru Ekle";
}

<h2>Yeni Soru Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ExamId" />

    <div class="form-group">
        <label asp-for="SoruMetni"></label>
        <input asp-for="SoruMetni" class="form-control" />
        <span asp-validation-for="SoruMetni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tip"></label>
        <select asp-for="Tip" class="form-control" asp-items="Html.GetEnumSelectList<OnlineSinavSistemi.Models.QuestionType>()">
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" asp-route-examId="@Model.ExamId" class="btn btn-secondary">Geri</a>
</form>