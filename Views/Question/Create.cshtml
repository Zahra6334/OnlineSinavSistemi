@model OnlineSinavSistemi.Models.Question
@{
    ViewData["Title"] = "Yeni Soru Ekle";
}

<h2>Yeni Soru Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ExamId" />

    <div class="form-group">
        <label asp-for="SoruMetni"></label>
        <textarea asp-for="SoruMetni" class="form-control"></textarea>
        <span asp-validation-for="SoruMetni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Þýklar</label>
        @for (int i = 0; i < 4; i++)
        {
            <input type="text" name="Choices[@i].Metin" class="form-control mb-1" placeholder="Þýk @i" />
            <label>Doðru mu?</label>
            <input type="checkbox" name="Choices[@i].IsCorrect" />
        }
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
