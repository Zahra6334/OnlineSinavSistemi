@model IEnumerable<OnlineSinavSistemi.Models.Question>
@{
    ViewData["Title"] = "Sorular";
    var examId = ViewBag.ExamId;
}

<h2>Sýnav Sorularý</h2>

<p>
    <a asp-action="Create" asp-route-examId="@examId" class="btn btn-primary">Yeni Soru Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Soru Metni</th>
            <th>Þýklar</th>
            <th>Ýþlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.QuestionText</td>
                <td>
                    <ul>
                        @foreach (var c in q.Choices)
                        {
                            <li>@c.Text @(c.IsCorrect ? "(Doðru)" : "")</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
