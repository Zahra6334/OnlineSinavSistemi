@model IEnumerable<OnlineSinavSistemi.Models.Question>
@{
    ViewData["Title"] = "Sorular";
    var examId = ViewBag.ExamId;
}

<div class="container-fluid py-5">
    <!-- Baþlýk -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">
                        <i class="bi bi-question-circle text-primary me-2"></i>Sýnav Sorularý
                    </h1>
                    <p class="text-muted mb-0">Tüm sorularý buradan yönetebilirsiniz</p>
                </div>
                <a asp-action="Create" asp-route-examId="@examId" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Soru Ekle
                </a>
            </div>
            <div class="border-bottom mt-4"></div>
        </div>
    </div>

    <!-- Soru Kartlarý -->
    <div class="row g-4">
        @foreach (var q in Model)
        {
            <div class="col-xl-6 col-lg-12">
                <div class="card border-0 shadow-lg h-100 hover-shadow" style="transition: all 0.3s;">
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-question-square me-2"></i>Soru @(Model.ToList().IndexOf(q) + 1)
                            </h5>
                            <span class="badge bg-light text-dark">
                                @q.Point Puan
                            </span>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <!-- Soru Metni -->
                        <div class="mb-4">
                            <h6 class="fw-bold text-dark mb-2">Soru Metni:</h6>
                            <div class="border-start border-3 border-primary ps-3 py-2 bg-light rounded-2">
                                @q.QuestionText
                            </div>
                        </div>

                        <!-- Þýklar -->
                        <div class="mb-4">
                            <h6 class="fw-bold text-dark mb-3">
                                <i class="bi bi-list-ul me-1"></i>Þýklar:
                            </h6>
                            <div class="list-group">
                                @foreach (var c in q.Choices)
                                {
                                    <div class="list-group-item border-0 border-bottom py-2 px-0">
                                        <div class="d-flex align-items-center">
                                            <div class="form-check me-3">
                                                <input class="form-check-input"
                                                       type="radio"
                                                       disabled
                                                       @(c.IsCorrect ? "checked" : "")>
                                            </div>
                                            <div class="flex-grow-1">
                                                <span class="@(c.IsCorrect ? "fw-bold text-success" : "text-dark")">
                                                    @c.Text
                                                </span>
                                            </div>
                                            @if (c.IsCorrect)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Doðru
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Soru Tipi -->
                        <div class="mb-3">
                            <span class="badge @(q.Type == 0 ? "bg-primary" : "bg-info")">
                                @(q.Type == 0 ? "Çoktan Seçmeli" : "Klasik")
                            </span>
                        </div>
                    </div>

                    <!-- Butonlar -->
                    <div class="card-footer bg-transparent border-top p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-hash me-1"></i>ID: @q.Id
                            </small>
                            <a asp-action="Delete" asp-route-id="@q.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu soruyu silmek istediðinize emin misiniz?')">
                                <i class="bi bi-trash-fill me-1"></i>Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-question-circle display-1 text-muted opacity-25 mb-3"></i>
                    <h3 class="text-muted">Henüz soru eklenmemiþ</h3>
                    <p class="text-muted mb-4">Ýlk sorunuzu eklemek için aþaðýdaki butonu kullanýn</p>
                    <a asp-action="Create" asp-route-examId="@examId" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Ýlk Sorunuzu Ekleyin
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Bilgilendirme -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-2">Soru Yönetimi Hakkýnda</h5>
                        <p class="mb-0">
                            • Çoktan seçmeli sorularda en az 2 þýk eklenmelidir.<br>
                            • Her soru için mutlaka bir doðru þýk belirtilmelidir.<br>
                            • Soru silme iþlemi geri alýnamaz, lütfen dikkatli olun.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Geri Dön Butonu -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center">
                <a asp-controller="Exam" asp-action="Details" asp-route-id="@examId" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Sýnav Detaylarýna Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .card {
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: rgba(102, 126, 234, 0.05);
    }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    .form-check-input:disabled {
        background-color: #e9ecef;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }
</style>