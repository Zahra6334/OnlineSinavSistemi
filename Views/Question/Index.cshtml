@model IEnumerable<OnlineSinavSistemi.Models.Question>
@{
    ViewData["Title"] = "Sorular";
    var examId = ViewBag.ExamId;
    var examTitle = ViewBag.ExamTitle ?? "Sýnav";
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .questions-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        color: var(--primary-color);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

    .page-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 80px;
        height: 4px;
        background: var(--accent-color);
        border-radius: 2px;
    }

    .page-subtitle {
        color: var(--text-light);
        font-size: 1.1rem;
        margin-top: 20px;
    }

    .exam-info-card {
        background: var(--white);
        border-radius: 20px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        border-left: 5px solid var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
    }

    .exam-info-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .exam-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: var(--white);
        flex-shrink: 0;
    }

    .exam-details h3 {
        color: var(--primary-color);
        font-weight: 700;
        margin: 0 0 5px 0;
        font-size: 1.5rem;
    }

    .exam-details p {
        color: var(--text-light);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .create-question-btn {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
        white-space: nowrap;
    }

    .create-question-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(44, 90, 160, 0.3);
        color: white;
    }

    .questions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .question-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        border: 2px solid transparent;
        transition: var(--transition);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .question-card:hover {
        transform: translateY(-8px);
        border-color: var(--primary-color);
        box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
    }

    .question-card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        padding: 25px;
        position: relative;
        overflow: hidden;
        min-height: 80px;
    }

    .question-card-header::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none"><path d="M0,0 Q500,100 1000,0 L1000,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
        background-size: 100% 100px;
        background-position: bottom;
    }

    .question-number {
        position: absolute;
        top: 20px;
        right: 25px;
        background: rgba(255, 255, 255, 0.2);
        color: var(--white);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 1.2rem;
    }

    .question-point {
        position: absolute;
        bottom: 15px;
        right: 25px;
        background: rgba(212, 175, 55, 0.9);
        color: var(--white);
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 1rem;
    }

    .question-card-body {
        padding: 25px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .question-text {
        color: var(--text-dark);
        font-weight: 600;
        line-height: 1.6;
        margin-bottom: 20px;
        font-size: 1.1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        flex-grow: 1;
    }

    .choices-container {
        margin-top: 15px;
    }

    .choices-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .choices-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .choice-item {
        padding: 12px 15px;
        margin-bottom: 8px;
        border-radius: 10px;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        position: relative;
        padding-left: 45px;
        transition: var(--transition);
    }

    .choice-item:hover {
        transform: translateX(5px);
        background: var(--secondary-color);
    }

    .choice-letter {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        width: 25px;
        height: 25px;
        background: var(--primary-color);
        color: var(--white);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .choice-text {
        color: var(--text-dark);
        line-height: 1.5;
        display: block;
        margin-bottom: 5px;
    }

    .choice-status {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.85rem;
        font-weight: 500;
        padding: 3px 10px;
        border-radius: 15px;
    }

    .correct-choice {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .question-card-footer {
        padding: 0 25px 25px 25px;
        margin-top: auto;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-delete {
        background: rgba(231, 76, 60, 0.1);
        color: var(--danger-color);
        padding: 12px 25px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        border: 1px solid rgba(231, 76, 60, 0.2);
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        flex: 1;
        min-width: 100px;
    }

    .btn-delete:hover {
        background: var(--danger-color);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
    }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        background: rgba(233, 242, 249, 0.5);
        border-radius: 20px;
        border: 2px dashed #c0d4e8;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #c0d4e8;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: var(--text-light);
        margin-bottom: 15px;
        font-size: 1.5rem;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto 30px;
        font-size: 1.1rem;
    }

    .stats-bar {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .back-button {
        background: transparent;
        color: var(--text-light);
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        border: 2px solid #e1e8f0;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        margin-top: 30px;
    }

    .back-button:hover {
        border-color: var(--primary-color);
        color: var(--primary-color);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .question-type-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 12px;
        border-radius: 15px;
        font-weight: 500;
        font-size: 0.85rem;
        margin-top: 10px;
        background: rgba(44, 90, 160, 0.1);
        color: var(--primary-color);
        border: 1px solid rgba(44, 90, 160, 0.2);
    }

    @@media (max-width: 768px) {
        .questions-grid {
            grid-template-columns: 1fr;
        }

        .exam-info-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .create-question-btn {
            width: 100%;
            justify-content: center;
        }

        .page-title {
            font-size: 2rem;
        }

        .stats-bar {
            grid-template-columns: repeat(2, 1fr);
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-delete {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .stats-bar {
            grid-template-columns: 1fr;
        }

        .exam-info-content {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .exam-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }
    }

    /* Animasyonlar */
    .question-card {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .choice-letter {
        transition: var(--transition);
    }

    .choice-item:hover .choice-letter {
        transform: translateY(-50%) scale(1.1);
    }
</style>

<div class="questions-section">
    <div class="container">
        <!-- Sayfa Baþlýðý -->
        <div class="page-header">
            <h1 class="page-title">Sýnav Sorularý</h1>
            <p class="page-subtitle">Sýnavdaki tüm sorularý buradan yönetebilirsiniz.</p>
        </div>

        <!-- Sýnav Bilgileri -->
        <div class="exam-info-card">
            <div class="exam-info-content">
                <div class="exam-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="exam-details">
                    <h3>@examTitle</h3>
                    <p>
                        <i class="fas fa-hashtag"></i>
                        <span>Sýnav ID: @examId</span>
                    </p>
                </div>
            </div>
            
            <a asp-action="Create" asp-route-examId="@examId" class="create-question-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Yeni Soru Ekle</span>
            </a>
        </div>

        <!-- Ýstatistikler -->
        @{
            var totalQuestions = Model.Count();
            var multipleChoiceCount = Model.Count(q => q.Choices != null && q.Choices.Any());
            var classicCount = totalQuestions - multipleChoiceCount;
            var totalPoints = Model.Sum(q => q.Point);
        }
        
        @if (totalQuestions > 0)
        {
            <div class="stats-bar">
                <div class="stat-item">
                    <span class="stat-number">@totalQuestions</span>
                    <span class="stat-label">Toplam Soru</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@multipleChoiceCount</span>
                    <span class="stat-label">Çoktan Seçmeli</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@classicCount</span>
                    <span class="stat-label">Klasik</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@totalPoints</span>
                    <span class="stat-label">Toplam Puan</span>
                </div>
            </div>
        }

        <!-- Soru Kartlarý Grid -->
        <div class="questions-grid">
            @if (Model.Any())
            {
               
                    int questionIndex = 1;
                
                
                @foreach (var q in Model)
                {
                    <div class="question-card" style="animation-delay: @(questionIndex * 0.1)s">
                        <div class="question-card-header">
                            <div class="question-number">@questionIndex</div>
                            <div class="question-point">@q.Point puan</div>
                        </div>

                        <div class="question-card-body">
                            <div class="question-text">
                                @q.QuestionText
                            </div>

                            @if (q.Choices != null && q.Choices.Any())
                            {
                                <div class="question-type-badge">
                                    <i class="fas fa-list-ol"></i>
                                    Çoktan Seçmeli
                                </div>
                                
                                <div class="choices-container">
                                    <div class="choices-title">
                                        <i class="fas fa-list-check"></i>
                                        Þýklar
                                    </div>
                                    
                                    <ul class="choices-list">
                                        @{
                                            var choiceLetters = new string[] { "A", "B", "C", "D" };
                                            int choiceIndex = 0;
                                        }
                                        
                                        @foreach (var c in q.Choices.Take(4))
                                        {
                                            <li class="choice-item">
                                                <div class="choice-letter">@choiceLetters[choiceIndex]</div>
                                                <span class="choice-text">@c.Text</span>
                                                @if (c.IsCorrect)
                                                {
                                                    <span class="choice-status correct-choice">
                                                        <i class="fas fa-check"></i>
                                                        Doðru Cevap
                                                    </span>
                                                }
                                            </li>
                                            choiceIndex++;
                                        }
                                        
                                        @if (q.Choices.Count > 4)
                                        {
                                            <li class="choice-item">
                                                <div class="choice-letter">+@(q.Choices.Count - 4)</div>
                                                <span class="choice-text">@(q.Choices.Count - 4) þýk daha</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="question-type-badge">
                                    <i class="fas fa-keyboard"></i>
                                    Klasik
                                </div>
                                
                                <div class="choices-container">
                                    <div class="choices-title">
                                        <i class="fas fa-comment-alt"></i>
                                        Cevap Tipi
                                    </div>
                                    <p style="color: var(--text-light); margin-top: 10px;">
                                        <i class="fas fa-info-circle"></i> Bu soru açýk uçlu cevap gerektirir.
                                    </p>
                                </div>
                            }
                        </div>

                        <div class="question-card-footer">
                            <div class="action-buttons">
                                <a asp-action="Delete" asp-route-id="@q.Id" class="btn-delete delete-question-btn" data-question-text="@q.QuestionText">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Soru Sil</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    questionIndex++;
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <h3>Henüz Soru Yok</h3>
                    <p>Bu sýnava henüz hiç soru eklenmemiþ. Ýlk sorunuzu ekleyerek baþlayabilirsiniz.</p>
                    <a asp-action="Create" asp-route-examId="@examId" class="create-question-btn">
                        <i class="fas fa-plus-circle"></i>
                        <span>Ýlk Soruyu Ekle</span>
                    </a>
                </div>
            }
        </div>

        <!-- Geri Dön Butonu -->
        <div class="text-center">
            <a href="/Teacher" class="back-button">
                <i class="fas fa-arrow-left"></i>
                <span>Sýnavlara Geri Dön</span>
            </a>
        </div>
    </div>
</div>

