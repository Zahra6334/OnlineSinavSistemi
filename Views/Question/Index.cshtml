@model IEnumerable<OnlineSinavSistemi.Models.Question>
    @{
    ViewBag.Title = "Soru Listesi";
    }

    <h2>Sorular</h2>

    <a asp-action="Create" asp-route-examId="@ViewBag.ExamId" class="btn btn-primary">Yeni Soru Ekle</a>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Soru Metni</th>
                <th>Tip</th>
                <th>Ýþlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.SoruMetni</td>
                <td>@item.Tip</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
