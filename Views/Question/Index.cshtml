<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Kart animasyonlarý
        const questionCards = document.querySelectorAll('.question-card');
        questionCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
        });

        // Sil butonlarý için onay dialog'u
        const deleteButtons = document.querySelectorAll('.delete-question-btn');
        deleteButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const url = this.href;
                const questionText = this.dataset.questionText;
                const shortText = questionText.length > 100 ? questionText.substring(0, 100) + '...' : questionText;

                Swal.fire({
                    title: 'Soruyu Sil',
                    html: `
                        <div style="text-align: left; padding: 15px;">
                            <p>Aþaðýdaki soruyu silmek istediðinize emin misiniz?</p>
                            <div style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin: 15px 0;">
                                <strong>"${shortText}"</strong>
                            </div>
                            <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> Bu iþlem geri alýnamaz!</p>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e74c3c',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, Sil',
                    cancelButtonText: 'Ýptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });
        });

        // Ýstatistikler için sayma animasyonu
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const text = stat.textContent;
            const target = parseInt(text);
            let current = 0;
            const increment = target / 30;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                stat.textContent = Math.round(current);
            }, 30);
        });

        // Soru kartlarýna hover efekti
        questionCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // Soru metni tamamýný göster/gizle
        const questionTexts = document.querySelectorAll('.question-text');
        questionTexts.forEach(textElement => {
            const fullText = textElement.textContent;
            
            // Eðer metin çok uzunsa
            if (fullText.length > 150) {
                const shortText = fullText.substring(0, 150) + '...';
                textElement.textContent = shortText;
                
                // Göster/gizle butonu ekle
                const toggleButton = document.createElement('button');
                toggleButton.type = 'button';
                toggleButton.className = 'show-more-btn';
                toggleButton.innerHTML = '<i class="fas fa-chevron-down"></i> Devamýný Göster';
                toggleButton.style.background = 'none';
                toggleButton.style.border = 'none';
                toggleButton.style.color = 'var(--primary-color)';
                toggleButton.style.cursor = 'pointer';
                toggleButton.style.fontSize = '0.9rem';
                toggleButton.style.marginTop = '5px';
                toggleButton.style.display = 'flex';
                toggleButton.style.alignItems = 'center';
                toggleButton.style.gap = '5px';
                toggleButton.style.fontWeight = '600';
                
                let isExpanded = false;
                toggleButton.addEventListener('click', function() {
                    if (!isExpanded) {
                        textElement.textContent = fullText;
                        toggleButton.innerHTML = '<i class="fas fa-chevron-up"></i> Daha Az Göster';
                        isExpanded = true;
                    } else {
                        textElement.textContent = shortText;
                        toggleButton.innerHTML = '<i class="fas fa-chevron-down"></i> Devamýný Göster';
                        isExpanded = false;
                    }
                });
                
                textElement.parentNode.insertBefore(toggleButton, textElement.nextSibling);
            }
        });
    });
</script>

