@model OnlineSinavSistemi.Models.Course

@{
    ViewData["Title"] = "Ders Ekle";
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-plus-circle display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Yeni Ders Ekle</h1>
                    <p class="text-muted mb-0">Sisteme yeni bir ders ekleyin</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Form Kartı -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-journal-plus me-2"></i>Ders Bilgileri
                    </h4>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span></span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <!-- Ders Adı Alanı -->
                        <div class="mb-4">
                            <label asp-for="CourseName" class="form-label fw-bold mb-3">
                                <i class="bi bi-book me-1"></i>Ders Adı
                            </label>
                            <input asp-for="CourseName"
                                   autocomplete="off"
                                   class="form-control form-control-lg"
                                   placeholder="Örnek: Matematik 101, Fizik 1, vb." />
                            <span asp-validation-for="CourseName" class="text-danger mt-2"></span>
                            <div class="mt-2 text-muted small">
                                <i class="bi bi-info-circle me-1"></i>Ders adı en az 3 karakter olmalıdır.
                            </div>
                        </div>

                        <!-- Bilgilendirme -->
                        <div class="alert alert-info border-0 rounded-3 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-lightbulb-fill fs-4 me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Dikkat!</h6>
                                    <p class="mb-0">
                                        • Ders ekledikten sonra öğrenci ve sınav ekleyebilirsiniz.<br>
                                        • Ders adı benzersiz olmalıdır.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-between mt-5 pt-3">
                            <button type="button" class="btn btn-secondary btn-lg" onclick="history.back()">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Dersi Kaydet
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-3">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-clock-history me-1"></i>
                            Ders ekleme işlemi anında gerçekleşir.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Hızlı İşlemler -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="text-center">
                        <p class="text-muted mb-3">Hızlı İşlemler</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-list-ul me-2"></i>Tüm Dersler
                            </a>
                            <a asp-controller="Exam" asp-action="Create" class="btn btn-outline-success">
                                <i class="bi bi-file-earmark-plus me-2"></i>Sınav Oluştur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-color: #667eea;
            color: white;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}