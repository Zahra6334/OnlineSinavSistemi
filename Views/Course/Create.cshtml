@model OnlineSinavSistemi.Models.Course
@{
    ViewData["Title"] = "Ders Ekle";
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-dark: #1a3a6d;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --gray-light: #f8f9fa;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-hover: 0 8px 30px rgba(44, 90, 160, 0.12);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --border-radius: 16px;
    }

    .create-course-container {
        min-height: 80vh;
        padding: 40px 20px;
        background: linear-gradient(135deg, var(--gray-light) 0%, #eef2f7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .create-course-card {
        background: var(--white);
        border-radius: 24px;
        box-shadow: var(--shadow);
        overflow: hidden;
        width: 100%;
        max-width: 600px;
        transition: var(--transition);
        border: 1px solid rgba(44, 90, 160, 0.1);
    }

        .create-course-card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-5px);
        }

    .create-course-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .create-course-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.05) 0%, transparent 50%);
        }

    .header-content {
        position: relative;
        z-index: 2;
    }

    .create-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin: 0 auto 20px;
        color: var(--white);
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .create-title {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 10px;
        color: var(--white);
    }

    .create-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
        color: rgba(255, 255, 255, 0.9);
    }

    .create-course-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 12px;
        font-size: 1.1rem;
    }

        .form-label i {
            color: var(--accent-color);
            font-size: 1.2rem;
        }

    .form-control {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid rgba(44, 90, 160, 0.2);
        border-radius: 12px;
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
        color: var(--text-dark);
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            transform: translateY(-2px);
        }

        .form-control::placeholder {
            color: rgba(0, 0, 0, 0.3);
        }

    .validation-message {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
        font-size: 0.9rem;
        padding: 8px 12px;
        border-radius: 8px;
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

        .validation-message i {
            font-size: 0.9rem;
        }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .btn-action {
        flex: 1;
        padding: 16px 24px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: var(--transition);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border: none;
        cursor: pointer;
    }

    .btn-save {
        background: linear-gradient(135deg, var(--success-color), #1e7e34);
        color: var(--white);
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #1e7e34, #155724);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
            color: var(--white);
        }

    .btn-back {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: var(--white);
    }

        .btn-back:hover {
            background: linear-gradient(135deg, #5a6268, #4e555b);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.3);
            color: var(--white);
        }

    /* Form hints */
    .form-hint {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
        font-size: 0.9rem;
        color: var(--text-light);
        padding: 8px 12px;
        background: var(--secondary-color);
        border-radius: 8px;
        border: 1px solid rgba(44, 90, 160, 0.1);
    }

        .form-hint i {
            color: var(--accent-color);
            font-size: 0.9rem;
        }

    /* Loading state */
    .btn-loading {
        position: relative;
        color: transparent !important;
    }

        .btn-loading::after {
            content: "";
            position: absolute;
            width: 20px;
            height: 20px;
            border: 2px solid var(--white);
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.8s linear infinite;
        }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Animation */
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-in {
        animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @@media (max-width: 768px) {
        .create-course-container

    {
        padding: 20px 15px;
    }

    .create-course-header {
        padding: 30px 20px;
    }

    .create-course-body {
        padding: 30px 20px;
    }

    .create-title {
        font-size: 1.8rem;
    }

    .create-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn-action {
        width: 100%;
    }

    }

    @@media (max-width: 576px) {
        .create-title

    {
        font-size: 1.6rem;
    }

    .form-control {
        padding: 14px 16px;
    }

    .btn-action {
        padding: 14px 20px;
    }

    }
</style>

<div class="create-course-container">
    <div class="create-course-card animate-in">
        <!-- Header -->
        <div class="create-course-header">
            <div class="header-content">
                <div class="create-icon">
                    <i class="fas fa-book-medical"></i>
                </div>
                <h1 class="create-title">Yeni Ders Oluştur</h1>
                <p class="create-subtitle">Yeni bir ders oluşturarak öğrencilerinizi ekleyin ve sınavlar planlayın</p>
            </div>
        </div>

        <!-- Form -->
        <div class="create-course-body">
            <form asp-action="Create" method="post" id="createCourseForm">
                <!-- Course Name -->
                <div class="form-group">
                    <label class="form-label" asp-for="CourseName">
                        <i class="fas fa-book"></i>
                        Ders Adı
                    </label>
                    <input asp-for="CourseName"
                           autocomplete="off"
                           class="form-control"
                           placeholder="Örn: Matematik 101, Fizik 2, Programlama Temelleri" />

                    <div class="form-hint">
                        <i class="fas fa-lightbulb"></i>
                        Dersin adını açık ve anlaşılır şekilde yazın
                    </div>

                    @if (ViewData.ModelState["CourseName"]?.Errors?.Any() == true)
                    {
                        <div class="validation-message">
                            <i class="fas fa-exclamation-circle"></i>
                            <span asp-validation-for="CourseName"></span>
                        </div>
                    }
                </div>

                <!-- Hidden fields for teacher -->
                <input type="hidden" name="TeacherId" value="@ViewBag.TeacherId" />

                <!-- Action Buttons -->
                <div class="form-actions">
                    <button type="submit" class="btn-action btn-save" id="submitButton">
                        <i class="fas fa-save"></i>
                        Dersi Kaydet
                    </button>
                    <button type="button" class="btn-action btn-back" onclick="goBack()">
                        <i class="fas fa-arrow-left"></i>
                        Geri Dön
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('createCourseForm');
            const submitButton = document.getElementById('submitButton');

            // Form submission
            form.addEventListener('submit', function(e) {
                if (form.checkValidity()) {
                    // Show loading state
                    submitButton.classList.add('btn-loading');
                    submitButton.disabled = true;

                    // You can optionally add a small delay to show the loading state
                    setTimeout(() => {
                        // Form will submit normally
                    }, 100);
                }
            });

            // Input focus effects
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });

            // Auto-focus on first input
            if (inputs.length > 0) {
                inputs[0].focus();
            }
        });

        function goBack() {
            const backButton = document.querySelector('.btn-back');
            backButton.classList.add('btn-loading');
            backButton.disabled = true;

            setTimeout(() => {
                history.back();
            }, 300);
        }

        // Form validation styling
        function setupFormValidation() {
            const form = document.getElementById('createCourseForm');
            const inputs = form.querySelectorAll('.form-control');

            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    const validationMessage = this.parentElement.querySelector('.validation-message');
                    if (validationMessage) {
                        validationMessage.style.display = this.value ? 'none' : 'flex';
                    }
                });
            });
        }

        // Initialize form validation
        document.addEventListener('DOMContentLoaded', setupFormValidation);
    </script>
}