@model List<ApplicationUser>

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-person-plus display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Öğrenci Ekle</h1>
                    <p class="text-muted mb-0">Dersinize öğrenci ekleyin</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Arama ve İçerik -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Arama Kartı -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-search me-2"></i>Öğrenci Ara
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="get">
                        <input type="hidden" name="courseId" value="@ViewBag.CourseId" />

                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-person text-primary"></i>
                            </span>
                            <input type="text"
                                   name="search"
                                   class="form-control border-start-0"
                                   placeholder="İsim veya email adresine göre ara..."
                                   value="@Context.Request.Query["search"]" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Ara
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Öğrenci Listesi Kartı -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people me-2"></i>Öğrenci Listesi
                        </h5>
                        <span class="badge bg-light text-dark">
                            @Model.Count Öğrenci
                        </span>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">
                                            <i class="bi bi-person me-1"></i>Ad
                                        </th>
                                        <th>
                                            <i class="bi bi-envelope me-1"></i>Email
                                        </th>
                                        <th class="text-end pe-4">
                                            <i class="bi bi-gear me-1"></i>İşlem
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr class="align-middle">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                                        <i class="bi bi-person-circle text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@student.UserName</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">@student.Email</span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <form asp-action="AddStudentToCourse" method="post" class="d-inline">
                                                    <input type="hidden" name="courseId" value="@ViewBag.CourseId" />
                                                    <input type="hidden" name="studentId" value="@student.Id" />

                                                    <button class="btn btn-success btn-sm">
                                                        <i class="bi bi-plus-circle me-1"></i>Ekle
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">Öğrenci bulunamadı</h5>
                            <p class="text-muted mb-4">
                                Arama kriterlerinize uygun öğrenci bulunamadı
                            </p>
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Toplam @Model.Count öğrenci listeleniyor
                            </small>
                        </div>
                        <a asp-action="Details" asp-route-id="@ViewBag.CourseId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Ders Detaylarına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05) !important;
    }

    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        border-bottom: 1px solid #dee2e6;
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

        .btn-success:hover {
            background-color: #157347;
            border-color: #146c43;
        }
</style>