@model IEnumerable<OnlineSinavSistemi.Models.Course>
@{
    ViewData["Title"] = "Dersler";
}

<h2>Derslerim</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ders Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Sınav Sayısı</th>
            <th>Öğrenci Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.DersAdi</td>
                <td>@course.Exams?.Count ?? 0</td>
                <td>@course.CourseStudents?.Count ?? 0</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
