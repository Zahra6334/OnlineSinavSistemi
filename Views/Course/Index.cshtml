@model IEnumerable<OnlineSinavSistemi.Models.Course>
@{
    ViewData["Title"] = "Derslerim";
}

<h2>Derslerim</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Ders Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Toplam Sınav</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.DersAdi</td>
                <td>@(course.Exams?.Count() ?? 0)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
