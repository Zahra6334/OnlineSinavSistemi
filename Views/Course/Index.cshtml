@model IEnumerable<OnlineSinavSistemi.Models.Course>
@{
    ViewData["Title"] = "Derslerim";
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-dark: #1a3a6d;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --gray-light: #f8f9fa;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --shadow-hover: 0 15px 40px rgba(44, 90, 160, 0.15);
        --transition: all 0.3s ease;
        --border-radius: 12px;
    }

    .courses-container {
        min-height: 70vh;
        padding: 30px 20px;
    }

    .courses-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 30px;
        border-radius: 20px;
        box-shadow: var(--shadow);
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

        .courses-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,30 Q50,0 100,30 L100,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: top;
        }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .page-title {
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 10px;
        color: var(--white);
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .btn-create-course {
        background: linear-gradient(135deg, var(--accent-color), #c69500);
        color: var(--white);
        border: none;
        padding: 14px 30px;
        border-radius: var(--border-radius);
        font-weight: 700;
        font-size: 1.1rem;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 5px 20px rgba(212, 175, 55, 0.3);
    }

        .btn-create-course:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(212, 175, 55, 0.4);
            color: var(--white);
            background: linear-gradient(135deg, #c69500, #b38600);
        }

    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .course-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: var(--transition);
        border: 1px solid transparent;
        position: relative;
    }

        .course-card:hover {
            transform: translateY(-10px);
            border-color: var(--primary-color);
            box-shadow: var(--shadow-hover);
        }

    .course-card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 25px;
        position: relative;
        overflow: hidden;
    }

        .course-card-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 Q50,50 100,0 L100,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 80px;
            background-position: top;
        }

    .course-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .course-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: var(--white);
    }

    .course-code {
        font-size: 0.9rem;
        opacity: 0.9;
        background: rgba(255, 255, 255, 0.1);
        padding: 4px 12px;
        border-radius: 20px;
        display: inline-block;
    }

    .course-card-body {
        padding: 25px;
    }

    .course-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin-bottom: 25px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
        background: var(--secondary-color);
        border-radius: var(--border-radius);
        transition: var(--transition);
    }

        .stat-item:hover {
            background: rgba(44, 90, 160, 0.1);
            transform: translateY(-3px);
        }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--text-light);
        font-weight: 600;
    }

    .course-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-action {
        flex: 1;
        min-width: 120px;
        padding: 12px 15px;
        border-radius: var(--border-radius);
        font-weight: 600;
        transition: var(--transition);
        text-align: center;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

    .btn-add-student {
        background: linear-gradient(135deg, var(--success-color), #1e7e34);
        color: var(--white);
    }

        .btn-add-student:hover {
            background: linear-gradient(135deg, #1e7e34, #155724);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .btn-details {
        background: linear-gradient(135deg, var(--info-color), #138496);
        color: var(--white);
    }

        .btn-details:hover {
            background: linear-gradient(135deg, #138496, #117a8b);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: var(--white);
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #c82333, #bd2130);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
            color: var(--white);
            text-decoration: none;
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        margin-top: 40px;
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--primary-color);
        opacity: 0.5;
        margin-bottom: 20px;
    }

    .empty-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .empty-text {
        color: var(--text-light);
        font-size: 1.1rem;
        max-width: 500px;
        margin: 0 auto 30px;
    }

    .btn-empty-create {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--white);
        padding: 15px 40px;
        border-radius: var(--border-radius);
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: var(--transition);
    }

        .btn-empty-create:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
            color: var(--white);
            text-decoration: none;
        }

    .courses-summary {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .summary-card {
        flex: 1;
        min-width: 200px;
        background: var(--white);
        padding: 25px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        text-align: center;
        transition: var(--transition);
        border-left: 5px solid var(--primary-color);
    }

        .summary-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

    .summary-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .summary-label {
        font-size: 1rem;
        color: var(--text-light);
        font-weight: 600;
    }

    @@media (max-width: 992px) {
        .courses-grid

    {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    .header-content {
        flex-direction: column;
        text-align: center;
        gap: 20px;
    }

    .page-title {
        font-size: 1.8rem;
    }

    }

    @@media (max-width: 768px) {
        .courses-container

    {
        padding: 20px 15px;
    }

    .courses-header {
        padding: 20px;
    }

    .courses-grid {
        grid-template-columns: 1fr;
    }

    .course-actions {
        flex-direction: column;
    }

    .btn-action {
        width: 100%;
    }

    .courses-summary {
        flex-direction: column;
    }

    .summary-card {
        width: 100%;
    }

    }

    @@media (max-width: 480px) {
        .course-stats

    {
        grid-template-columns: 1fr;
    }

    .course-title {
        font-size: 1.2rem;
    }

    .btn-create-course {
        width: 100%;
        justify-content: center;
    }

    }

    /* Animations */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animated-card {
        animation: fadeInUp 0.6s ease-out;
    }
</style>

<div class="courses-container">
    <!-- Header -->
    <div class="courses-header">
        <div class="header-content">
            <div>
                <h1 class="page-title">Derslerim</h1>
                <p class="page-subtitle">Tüm derslerinizi buradan yönetin</p>
            </div>
            <a asp-action="Create" class="btn-create-course">
                <i class="fas fa-plus-circle"></i>
                Yeni Ders Ekle
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    @{
        var totalCourses = Model.Count();
        var totalExams = Model.Sum(c => c.Exams?.Count() ?? 0);
        var totalStudents = Model.Sum(c => c.CourseStudents?.Count() ?? 0);
        var activeCourses = Model.Count(c => (c.Exams?.Count() ?? 0) > 0);
    }

    <div class="courses-summary">
        <div class="summary-card">
            <div class="summary-value">@totalCourses</div>
            <div class="summary-label">Toplam Ders</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@totalExams</div>
            <div class="summary-label">Toplam Sınav</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@totalStudents</div>
            <div class="summary-label">Toplam Öğrenci</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@activeCourses</div>
            <div class="summary-label">Aktif Ders</div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Courses Grid -->
        <div class="courses-grid">
            @foreach (var course in Model)
            {
                <div class="course-card animated-card">
                    <!-- Course Header -->
                    <div class="course-card-header">
                        <div class="course-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3 class="course-title">@course.CourseName</h3>
                        <span class="course-code">
                            ID: @{
                                // ID'yi güvenli şekilde göster
                                var courseId = course.Id.ToString();
                                var displayId = courseId.Length >= 8 ? courseId.Substring(0, 8) : courseId;
                            }@displayId
                        </span>
                    </div>

                    <!-- Course Body -->
                    <div class="course-card-body">
                        <!-- Stats -->
                        <div class="course-stats">
                            <div class="stat-item">
                                <span class="stat-value">@(course.Exams?.Count() ?? 0)</span>
                                <span class="stat-label">Sınav</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-value">@(course.CourseStudents?.Count() ?? 0)</span>
                                <span class="stat-label">Öğrenci</span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="course-actions">
                            <a asp-action="AddStudent"
                               asp-route-courseId="@course.Id"
                               class="btn-action btn-add-student">
                                <i class="fas fa-user-plus"></i>
                                Öğrenci Ekle
                            </a>
                            <a asp-action="Details"
                               asp-route-id="@course.Id"
                               class="btn-action btn-details">
                                <i class="fas fa-eye"></i>
                                Detaylar
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@course.Id"
                               class="btn-action btn-delete"
                               onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?')">
                                <i class="fas fa-trash-alt"></i>
                                Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-book"></i>
            </div>
            <h3 class="empty-title">Henüz Ders Bulunmuyor</h3>
            <p class="empty-text">
                Henüz hiç ders eklemediniz. Yeni bir ders ekleyerek öğrencilerinizi ekleyebilir
                ve sınavlar oluşturabilirsiniz.
            </p>
            <a asp-action="Create" class="btn-empty-create">
                <i class="fas fa-plus-circle"></i>
                İlk Dersini Ekle
            </a>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Card hover animations
        const courseCards = document.querySelectorAll('.course-card');
        courseCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;

            card.addEventListener('mouseenter', function() {
                const icon = this.querySelector('.course-icon');
                if (icon) {
                    icon.style.transform = 'scale(1.1) rotate(5deg)';
                    icon.style.transition = 'transform 0.3s ease';
                }
            });

            card.addEventListener('mouseleave', function() {
                const icon = this.querySelector('.course-icon');
                if (icon) {
                    icon.style.transform = '';
                }
            });
        });

        // Summary card animations
        const summaryCards = document.querySelectorAll('.summary-card');
        summaryCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.2}s`;
        });

        // Delete confirmation enhancement
        const deleteButtons = document.querySelectorAll('.btn-delete');
        deleteButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                if (!confirm('Bu dersi ve tüm bağlı sınavları/öğrencileri silmek istediğinize emin misiniz?\nBu işlem geri alınamaz.')) {
                    e.preventDefault();
                }
            });
        });
    });
</script>