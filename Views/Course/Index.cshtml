@model IEnumerable<OnlineSinavSistemi.Models.Course>
@{
    ViewData["Title"] = "Derslerim";
}

<div class="container-fluid py-5">
    <!-- Başlık ve Buton -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-2">
                        <i class="bi bi-journals text-primary me-2"></i>Derslerim
                    </h1>
                    <p class="text-muted">Tüm derslerinizi buradan yönetebilirsiniz</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Ders Ekle
                </a>
            </div>
            <div class="border-bottom mt-4"></div>
        </div>
    </div>

    <!-- Ders Kartları -->
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card border-0 shadow-lg h-100 hover-shadow" style="transition: all 0.3s;">
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="bi bi-book me-2"></i>@course.CourseName
                            </h5>
                        
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <!-- İstatistikler -->
                        <div class="row g-3 mb-4">
                            <div class="col-6">
                                <div class="text-center p-3 border rounded-3 bg-light">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <i class="bi bi-file-text-fill text-primary fs-4 me-2"></i>
                                        <h4 class="fw-bold mb-0">@(course.Exams?.Count() ?? 0)</h4>
                                    </div>
                                    <p class="text-muted mb-0 small">Toplam Sınav</p>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3 border rounded-3 bg-light">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <i class="bi bi-people-fill text-primary fs-4 me-2"></i>
                                        <h4 class="fw-bold mb-0">@(course.CourseStudents?.Count() ?? 0)</h4>
                                    </div>
                                    <p class="text-muted mb-0 small">Öğrenci Sayısı</p>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2">
                            <a asp-action="AddStudent"
                               asp-route-courseId="@course.Id"
                               class="btn btn-primary btn-lg py-2">
                                <i class="bi bi-person-plus-fill me-2"></i>Öğrenci Ekle
                            </a>

                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details"
                                   asp-route-id="@course.Id"
                                   class="btn btn-info text-white flex-fill">
                                    <i class="bi bi-eye-fill me-1"></i>Detay
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@course.Id"
                                   class="btn btn-danger flex-fill"
                                   onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?')">
                                    <i class="bi bi-trash-fill me-1"></i>Sil
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer bg-transparent border-top p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                Son Güncelleme: @DateTime.Now.ToString("dd.MM.yyyy")
                            </small>
                            <span class="badge bg-primary rounded-pill">
                                <i class="bi bi-check-circle me-1"></i>Aktif
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-journals display-1 text-muted opacity-25 mb-3"></i>
                    <h3 class="text-muted">Henüz ders eklenmemiş</h3>
                    <p class="text-muted mb-4">İlk dersinizi eklemek için aşağıdaki butonu kullanın</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>İlk Dersinizi Ekleyin
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Bilgilendirme -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-2">Ders Yönetimi Hakkında</h5>
                        <p class="mb-0">
                            • Her derse istediğiniz sayıda öğrenci ekleyebilirsiniz.<br>
                            • Derslerinize ait sınavları oluşturabilir ve yönetebilirsiniz.<br>
                            • Ders silme işlemi geri alınamaz, lütfen dikkatli olun.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .card {
        transition: all 0.3s ease;
    }
</style>