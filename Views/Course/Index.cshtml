@model IEnumerable<OnlineSinavSistemi.Models.Course>
@{
    ViewData["Title"] = "Derslerim";
}

<h2>Derslerim</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Ders Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Toplam Sınav</th>
            <th>Öğrenci Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.DersAdi</td>
                <td>@(course.Exams != null ? course.Exams.Count : 0)</td>
                <td>@(course.CourseStudents != null ? course.CourseStudents.Count : 0)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@course.Id">Detay</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@course.Id"
                       onclick="return confirm('Dersi silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
