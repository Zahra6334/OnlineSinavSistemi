@model OnlineSinavSistemi.Models.Course
@{
    ViewData["Title"] = "Ders Detayları";
}

<h2>@Model.DersAdi - Detaylar</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Öğrenciler</h4>
        @if (Model.CourseStudents != null && Model.CourseStudents.Any())
        {
            <ul class="list-group">
                @foreach (var cs in Model.CourseStudents)
                {
                    <li class="list-group-item">@cs.Student.UserName (@cs.Student.Email)</li>
                }
            </ul>
        }
        else
        {
            <p>Bu derse kayıtlı öğrenci yok.</p>
        }
    </div>

    <div class="col-md-6">
        <h4>Sınavlar</h4>
        @if (Model.Exams != null && Model.Exams.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Süre (dk)</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Yayınlandı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model.Exams)
                    {
                        <tr>
                            <td>@exam.Baslik</td>
                            <td>@exam.SureDakika</td>
                            <td>@exam.BaslangicTarihi.ToString("g")</td>
                            <td>@(exam.Yayinlandi ? "Evet" : "Hayır")</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-controller="Exam" asp-action="Details" asp-route-id="@exam.Id">Detay</a>
                                <form asp-controller="Exam" asp-action="TogglePublish" asp-route-id="@exam.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-warning btn-sm">
                                        @(exam.Yayinlandi ? "Kaldır" : "Yayınla")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Bu derse ait sınav bulunmamaktadır.</p>
        }
    </div>
</div>

<p>
    <a class="btn btn-secondary mt-2" asp-action="Index">Geri</a>
</p>
