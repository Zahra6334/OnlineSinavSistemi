@model OnlineSinavSistemi.Models.Course

@{
    ViewData["Title"] = "Ders Detayları";
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-book display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">@Model.CourseName</h1>
                    <p class="text-muted mb-0">Ders Detayları ve İstatistikler</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-people-fill me-2"></i>Toplam Öğrenci
                    </h5>
                </div>
                <div class="card-body p-4 text-center">
                    <h2 class="display-2 fw-bold text-primary mb-0">
                        @(Model.CourseStudents?.Count() ?? 0)
                    </h2>
                    <p class="text-muted mb-0">Kayıtlı Öğrenci</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-file-text-fill me-2"></i>Toplam Sınav
                    </h5>
                </div>
                <div class="card-body p-4 text-center">
                    <h2 class="display-2 fw-bold text-primary mb-0">
                        @(Model.Exams?.Count() ?? 0)
                    </h2>
                    <p class="text-muted mb-0">Oluşturulan Sınav</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Öğrenciler Bölümü -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-person-lines-fill me-2"></i>Derse Kayıtlı Öğrenciler
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.CourseStudents != null && Model.CourseStudents.Any())
                    {
                        <div class="row g-3">
                            @foreach (var cs in Model.CourseStudents)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="border rounded-3 p-3 d-flex align-items-center hover-shadow">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                            <i class="bi bi-person-circle text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">@cs.Student?.UserName</h6>
                                            <small class="text-muted">Öğrenci</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people display-1 text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">Bu derse kayıtlı öğrenci bulunmamaktadır</h5>
                            <p class="text-muted mb-4">Öğrenci eklemek için "Öğrenci Ekle" butonunu kullanın</p>
                            <a asp-action="AddStudent"
                               asp-route-courseId="@Model.Id"
                               class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus-fill me-2"></i>Öğrenci Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sınavlar Bölümü -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-clipboard-check-fill me-2"></i>Derse Ait Sınavlar
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.Exams != null && Model.Exams.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sınav Adı</th>
                                        <th>Durum</th>
                                        <th>Tarih</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var exam in Model.Exams)
                                    {
                                        <tr>
                                            <td class="fw-bold">@exam.Title</td>
                                            <td>
                                                @if (exam.IsPublished)
                                                {
                                                    <span class="badge bg-success rounded-pill">
                                                        <i class="bi bi-check-circle me-1"></i>Yayınlandı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark rounded-pill">
                                                        <i class="bi bi-clock me-1"></i>Yayınlanmadı
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@exam.StartDate.ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <a asp-controller="Exam"
                                                   asp-action="Details"
                                                   asp-route-id="@exam.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye-fill me-1"></i>Detay
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-file-earmark-text display-1 text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">Bu derse ait sınav bulunmamaktadır</h5>
                            <p class="text-muted mb-4">Sınav oluşturmak için aşağıdaki butonu kullanın</p>
                            <a asp-controller="Exam"
                               asp-action="Create"
                               asp-route-courseId="@Model.Id"
                               class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle me-2"></i>Sınav Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Butonlar -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-secondary btn-lg" onclick="history.back()">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </button>
                <div>
                    <a asp-action="AddStudent"
                       asp-route-courseId="@Model.Id"
                       class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-person-plus-fill me-2"></i>Öğrenci Ekle
                    </a>
                    <a asp-controller="Exam"
                       asp-action="Create"
                       asp-route-courseId="@Model.Id"
                       class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Sınav Oluştur
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
</style>