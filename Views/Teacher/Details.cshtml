@model OnlineSinavSistemi.Models.Exam
@{
    ViewData["Title"] = "Sınav Detayları";
    var katilimlar = ViewBag.Katilimlar as List<OnlineSinavSistemi.Models.StudentExam>;
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-clipboard-check display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Sınav Detayları</h1>
                    <p class="text-muted mb-0">@Model.Course</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Sınav Bilgileri -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Sınav Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <h6 class="fw-bold text-muted mb-1">Sınav Adı</h6>
                        <p class="fs-5 fw-bold text-dark">@Model.Course</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="fw-bold text-muted mb-1">Ders</h6>
                        <p class="fs-5">@Model.Course.CourseName</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="fw-bold text-muted mb-1">Tarih</h6>
                        <p class="fs-5">@Model.DurationMinutes.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-people-fill me-2"></i>Katılım Durumu
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="text-center">
                            <h2 class="display-2 fw-bold text-primary">@(katilimlar?.Count ?? 0)</h2>
                            <p class="text-muted mb-0">Toplam Katılımcı</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-center">
                            <div class="p-3 border rounded-3 bg-light">
                                <h4 class="fw-bold text-success">@(katilimlar?.Count(k => k.Completed) ?? 0)</h4>
                                <p class="text-muted mb-0">Giren</p>
                            </div>
                        </div>
                        <div class="col-6 text-center">
                            <div class="p-3 border rounded-3 bg-light">
                                <h4 class="fw-bold text-warning">@(katilimlar?.Count(k => !k.Completed) ?? 0)</h4>
                                <p class="text-muted mb-0">Girmeyen</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Katılımcılar Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-lines-fill me-2"></i>Katılımcılar
                        </h5>
                        <span class="badge bg-light text-dark">@(katilimlar?.Count ?? 0) Kişi</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (katilimlar != null && katilimlar.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">
                                            <i class="bi bi-person me-1"></i>Öğrenci Adı
                                        </th>
                                        <th class="pe-4">
                                            <i class="bi bi-info-circle me-1"></i>Durum
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var k in katilimlar)
                                    {
                                        <tr class="align-middle">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                                        <i class="bi bi-person-circle text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@k.Student.full_name</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="pe-4">
                                                @if (k.Completed)
                                                {
                                                    <span class="badge bg-success rounded-pill">
                                                        <i class="bi bi-check-circle me-1"></i>Girdi
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark rounded-pill">
                                                        <i class="bi bi-clock me-1"></i>Girmedi
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">Henüz sınava giriş yapılmamış</h5>
                            <p class="text-muted mb-4">Öğrenciler sınava başladıktan sonra burada listeleneceklerdir.</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent border-top p-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05) !important;
    }

    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        border-bottom: 1px solid #dee2e6;
        vertical-align: middle;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>