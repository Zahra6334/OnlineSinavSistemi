@{
    ViewData["Title"] = "Öğretmen Paneli";
}

<div class="container-fluid py-5">
    <!-- Başlık ve Hoş Geldiniz -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-person-badge display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Öğretmen Paneli</h1>
                    <p class="lead text-muted mb-0">Hoş geldiniz, <span class="text-primary fw-bold">@User.Identity.Name</span></p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="fw-bold text-dark mb-4">
                <i class="bi bi-lightning-charge-fill text-warning me-2"></i>Hızlı İşlemler
            </h3>
            <div class="row g-4">
                <div class="col-md-4">
                    <a asp-controller="Course" asp-action="Index" class="text-decoration-none">
                        <div class="card border-0 shadow-lg h-100 hover-lift" style="transition: all 0.3s;">
                            <div class="card-body p-4 text-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                    <i class="bi bi-journal-plus display-5 text-primary"></i>
                                </div>
                                <h4 class="card-title fw-bold text-dark mb-2">Ders Ekle</h4>
                                <p class="card-text text-muted mb-0">
                                    Yeni ders ekleyin veya mevcut dersleri yönetin
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0 p-3 text-center">
                                <span class="btn btn-primary px-4">
                                    <i class="bi bi-arrow-right-circle me-2"></i>Devam Et
                                </span>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a asp-controller="Exam" asp-action="Create" class="text-decoration-none">
                        <div class="card border-0 shadow-lg h-100 hover-lift" style="transition: all 0.3s;">
                            <div class="card-body p-4 text-center">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                    <i class="bi bi-file-earmark-plus display-5 text-success"></i>
                                </div>
                                <h4 class="card-title fw-bold text-dark mb-2">Sınav Oluştur</h4>
                                <p class="card-text text-muted mb-0">
                                    Yeni sınav oluşturun ve soru bankanızı kullanın
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0 p-3 text-center">
                                <span class="btn btn-success px-4">
                                    <i class="bi bi-arrow-right-circle me-2"></i>Devam Et
                                </span>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a asp-controller="Exam" asp-action="Index" class="text-decoration-none">
                        <div class="card border-0 shadow-lg h-100 hover-lift" style="transition: all 0.3s;">
                            <div class="card-body p-4 text-center">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                    <i class="bi bi-clipboard-data display-5 text-info"></i>
                                </div>
                                <h4 class="card-title fw-bold text-dark mb-2">Sınavları Listele</h4>
                                <p class="card-text text-muted mb-0">
                                    Tüm sınavlarınızı görüntüleyin ve yönetin
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0 p-3 text-center">
                                <span class="btn btn-info text-white px-4">
                                    <i class="bi bi-arrow-right-circle me-2"></i>Devam Et
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row">
        <div class="col-12">
            <h3 class="fw-bold text-dark mb-4">
                <i class="bi bi-bar-chart-fill text-primary me-2"></i>İstatistikler
            </h3>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                                    <i class="bi bi-journals display-4 text-primary"></i>
                                </div>
                                <div>
                                    <h2 class="display-4 fw-bold text-dark mb-0">@ViewBag.DersSayisi</h2>
                                    <p class="text-muted mb-0">Toplam Ders Sayısı</p>
                                </div>
                            </div>
                            <div class="mt-4">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar"
                                         style="width: @((ViewBag.DersSayisi > 0 ? ViewBag.DersSayisi : 1) * 10)%;"
                                         aria-valuenow="@ViewBag.DersSayisi" aria-valuemin="0" aria-valuemax="10"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                                    <i class="bi bi-clipboard-check display-4 text-success"></i>
                                </div>
                                <div>
                                    <h2 class="display-4 fw-bold text-dark mb-0">@ViewBag.SinavSayisi</h2>
                                    <p class="text-muted mb-0">Toplam Sınav Sayısı</p>
                                </div>
                            </div>
                            <div class="mt-4">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @((ViewBag.SinavSayisi > 0 ? ViewBag.SinavSayisi : 1) * 10)%;"
                                         aria-valuenow="@ViewBag.SinavSayisi" aria-valuemin="0" aria-valuemax="10"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ek Bilgiler -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info border-0 rounded-3 shadow-sm">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill display-5 me-3"></i>
                    <div>
                        <h4 class="alert-heading mb-2">Öğretmen Paneli Hakkında</h4>
                        <p class="mb-0">
                            Bu panel üzerinden ders ekleyebilir, sınav oluşturabilir ve mevcut sınavlarınızı yönetebilirsiniz.
                            İstatistikler bölümünde toplam ders ve sınav sayılarınızı takip edebilirsiniz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Minimal hover efekti için inline style -->
<style>
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .card {
        transition: all 0.3s ease;
    }
</style>