@model IEnumerable<OnlineSinavSistemi.Models.Exam>

<h2>Sınav Listesi</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Sınav Oluştur</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Ders</th>
            <th>Başlangıç Tarihi</th>
            <th>Süre (dk)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sinav in Model)
        {
            <tr>
                <td>@sinav.Baslik</td>
                <td>@sinav.Course?.DersAdi</td>
                <td>@sinav.BaslangicTarihi.ToString("g")</td>
                <td>@sinav.SureDakika</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sinav.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@sinav.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@sinav.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
