@model IEnumerable<OnlineSinavSistemi.Models.Exam>

@{
    ViewData["Title"] = "Sınavlarım";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <a class="btn btn-primary mb-3" asp-action="Create">Yeni Sınav Oluştur</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ders</th>
                <th>Sınav Adı</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.DersAdi</td>
                    <td>@item.Course</td>
                    <td>@item.SureDakika.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
