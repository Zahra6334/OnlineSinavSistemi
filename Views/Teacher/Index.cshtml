@{
    ViewData["Title"] = "Öğretmen Paneli";
}

<h2>👨‍🏫 Hoş geldiniz, @User.Identity.Name</h2>

<div class="dashboard">
    <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg">📘 Ders Ekle</a>
    <a asp-controller="Exam" asp-action="Create" class="btn btn-success btn-lg">🧾 Sınav Oluştur</a>
    <a asp-controller="Exam" asp-action="Index" class="btn btn-info btn-lg">📋 Sınavları Listele</a>
  
</div>

<div class="stats">
    <p><strong>Ders Sayısı:</strong> @ViewBag.DersSayisi</p>
    <p><strong>Sınav Sayısı:</strong> @ViewBag.SinavSayisi</p>
</div>

<style>
    .dashboard {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 250px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        color: white;
        font-weight: bold;
        text-decoration: none;
    }

    .stats {
        margin-top: 30px;
    }
</style>
