@model OnlineSinavSistemi.Models.Exam

@{
    ViewData["Title"] = "Sınavı Düzenle";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Course" class="form-label">Sınav Adı</label>
            <input asp-for="Course" class="form-control" />
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Ders Seçin</label>
            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Dersler">
                <option value="">-- Ders Seçin --</option>
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SureDakika" class="form-label">Sınav Tarihi</label>
            <input asp-for="SureDakika" type="datetime-local" class="form-control" />
            <span asp-validation-for="SureDakika" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
