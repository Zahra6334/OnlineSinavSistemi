@model IEnumerable<OnlineSinavSistemi.Models.Course>
    @{
    ViewBag.Title = "Derslerim";
    }

    <h2>Derslerim</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Ders Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ders Adı</th>
                <th>Öğrenci Sayısı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var course in Model)
        {
            <tr>
                <td>@course.DersAdi</td>
                <td>@(course.CourseStudents?.Count ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Sil</a>
                    <a asp-controller="Exam" asp-action="Index" asp-route-teacherId="@User.Identity.Name" class="btn btn-sm btn-primary">Sınavlar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
