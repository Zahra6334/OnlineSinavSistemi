@model IEnumerable<OnlineSinavSistemi.Models.StudentExam>

@{
    ViewData["Title"] = "Sınava Giren Öğrenciler";
    var exam = ViewBag.Exam as OnlineSinavSistemi.Models.Exam;
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-people-fill display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">@exam.Title</h1>
                    <p class="text-muted mb-0">Öğrenci Listesi ve Durumları</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Sınav Bilgileri Kartı -->
    <div class="row mb-5">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Sınav Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-book text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold text-muted mb-1">Ders</h6>
                                    <p class="fs-5 fw-bold text-dark mb-0">@exam.Course?.CourseName</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-stopwatch text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold text-muted mb-1">Süre</h6>
                                    <p class="fs-5 fw-bold text-dark mb-0">@exam.DurationMinutes dakika</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- İstatistik Kartı -->
        <div class="col-md-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart me-2"></i>İstatistikler
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="display-2 fw-bold text-primary mb-0">@Model.Count()</h2>
                        <p class="text-muted mb-0">Toplam Öğrenci</p>
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <div class="border rounded-3 p-3 text-center">
                                <h4 class="fw-bold text-success mb-1">@Model.Count(se => se.Completed)</h4>
                                <p class="text-muted mb-0 small">Sınavı Tamamlayan</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded-3 p-3 text-center">
                                <h4 class="fw-bold text-warning mb-1">@Model.Count(se => !se.Completed)</h4>
                                <p class="text-muted mb-0 small">Devam Eden</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Öğrenci Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-check me-2"></i>Öğrenci Listesi
                        </h5>
                        <span class="badge bg-light text-dark">
                            @Model.Count() Öğrenci
                        </span>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">
                                            <i class="bi bi-123 me-1"></i>Öğrenci No
                                        </th>
                                        <th>
                                            <i class="bi bi-person me-1"></i>Ad Soyad
                                        </th>
                                        <th>
                                            <i class="bi bi-play-circle me-1"></i>Başlama
                                        </th>
                                        <th>
                                            <i class="bi bi-stop-circle me-1"></i>Bitiş
                                        </th>
                                        <th>
                                            <i class="bi bi-check-circle me-1"></i>Durum
                                        </th>
                                        <th>
                                            <i class="bi bi-star me-1"></i>Not
                                        </th>
                                        <th class="pe-4">
                                            <i class="bi bi-gear me-1"></i>İşlem
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var se in Model)
                                    {
                                        <tr class="align-middle">
                                            <td class="ps-4 fw-bold">@se.Student.Numara</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-2">
                                                        <i class="bi bi-person-circle text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@se.Student.full_name</h6>
                                                        <small class="text-muted">@se.Student.UserName</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">@(se.StartTime?.ToString("dd.MM.yyyy HH:mm") ?? "-")</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@(se.EndTime?.ToString("dd.MM.yyyy HH:mm") ?? "-")</small>
                                            </td>
                                            <td>
                                                @if (se.Completed)
                                                {
                                                    <span class="badge bg-success rounded-pill">
                                                        <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark rounded-pill">
                                                        <i class="bi bi-clock me-1"></i>Devam Ediyor
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (se.Score.HasValue)
                                                {
                                                    <span class="badge @(se.Score >= 50 ? "bg-success" : "bg-danger") rounded-pill">
                                                        @se.Score.Value.ToString("F2")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary rounded-pill">-</span>
                                                }
                                            </td>
                                            <td class="pe-4">
                                                @if (se.Completed)
                                                {
                                                    <a asp-controller="Teacher"
                                                       asp-action="StudentAnswers"
                                                       asp-route-studentExamId="@se.Id"
                                                       class="btn btn-sm btn-primary">
                                                        <i class="bi bi-eye-fill me-1"></i>Cevapları Gör
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sınav bitmedi</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">Henüz bu sınava giren öğrenci yok</h5>
                            <p class="text-muted mb-4">Öğrenciler sınava başladıktan sonra burada listeleneceklerdir.</p>
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                @Model.Count(se => se.Completed) tamamlayan / @Model.Count() öğrenci
                            </small>
                        </div>
                        <a asp-controller="Exam"
                           asp-action="Details"
                           asp-route-id="@exam.Id"
                           class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Geri
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center">
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Exam" asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil-fill me-2"></i>Sınavı Düzenle
                    </a>
                    <a asp-controller="Question" asp-action="Index" asp-route-examId="@exam.Id" class="btn btn-outline-success">
                        <i class="bi bi-question-circle-fill me-2"></i>Soruları Görüntüle
                    </a>
                    <a asp-controller="Exam" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-list-ul me-2"></i>Tüm Sınavlar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05) !important;
    }

    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        border-bottom: 1px solid #dee2e6;
        vertical-align: middle;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            border-color: #667eea;
            color: white;
        }

    .btn-outline-success {
        border-color: #198754;
        color: #198754;
    }

        .btn-outline-success:hover {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }
</style>