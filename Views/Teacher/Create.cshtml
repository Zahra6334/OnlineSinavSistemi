@model OnlineSinavSistemi.Models.Course
@{
    ViewBag.Title = "Yeni Ders Ekle";
}

<h2>Yeni Ders Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DersAdi"></label>
        <input asp-for="DersAdi" class="form-control" />
        <span asp-validation-for="DersAdi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>