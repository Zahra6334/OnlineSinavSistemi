@model IEnumerable<OnlineSinavSistemi.Models.Answer>
@{
    ViewData["Title"] = "Cevaplar";
    var studentExamId = ViewBag.StudentExamId;
}

<h2>Öðrenci Cevaplarý</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Soru</th>
            <th>Verilen Cevap</th>
            <th>Seçilen Þýk</th>
            <th>Dosya</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Question.SoruMetni</td>
                <td>@a.AnswerText</td>
                <td>@(a.SelectedChoiceId.HasValue ? a.SelectedChoiceId.ToString() : "-")</td>
                <td>
                    @if (!string.IsNullOrEmpty(a.FilePath))
                    {
                        <a href="@Url.Content(a.FilePath)" target="_blank">Dosya</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
