@model IEnumerable<OnlineSinavSistemi.Models.Answer>

@{
    ViewData["Title"] = "Öğrenci Cevapları";
}

<div class="container-fluid py-5">
    <!-- Başlık -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-clipboard-check display-4 text-primary me-3"></i>
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-1">Öğrenci Cevapları</h1>
                    <p class="text-muted mb-0">Öğrenci sınav cevaplarını görüntüleyin ve değerlendirin</p>
                </div>
            </div>
            <div class="border-bottom pb-3"></div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg mb-5">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-check me-2"></i>Tüm Cevaplar
                    </h5>
                </div>
                
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">
                                        <i class="bi bi-question-circle me-1"></i>Soru
                                    </th>
                                    <th>
                                        <i class="bi bi-chat-left-text me-1"></i>Klasik Cevap
                                    </th>
                                    <th>
                                        <i class="bi bi-list-ul me-1"></i>Şıklar ve Seçim
                                    </th>
                                    <th class="pe-4">
                                        <i class="bi bi-file-earmark me-1"></i>Dosya
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model)
                                {
                                    <tr>
                                        <!-- SORU -->
                                        <td class="ps-4">
                                            <div class="fw-bold">@(a.Question != null ? a.Question.QuestionText : "Soru bulunamadı")</div>
                                            @if (a.Question != null)
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-tag me-1"></i>Puan: @a.Question.Point
                                                </small>
                                            }
                                        </td>

                                        <!-- KLASİK CEVAP -->
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(a.AnswerText))
                                            {
                                                <div class="border-start border-3 border-primary ps-3 py-1">
                                                    @a.AnswerText
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>

                                        <!-- ŞIKLAR -->
                                        <td>
                                            @if (a.Question?.Choices != null && a.Question.Choices.Any())
                                            {
                                                <div class="list-group list-group-flush">
                                                    @foreach (var c in a.Question.Choices)
                                                    {
                                                        <div class="list-group-item border-0 px-0 py-1">
                                                            <div class="d-flex align-items-center">
                                                                <div class="form-check me-2">
                                                                    <input class="form-check-input" 
                                                                           type="radio" 
                                                                           disabled 
                                                                           @(a.SelectedChoiceId == c.Id ? "checked" : "")>
                                                                </div>
                                                                <div class="flex-grow-1">
                                                                    @c.Text
                                                                    @if (a.SelectedChoiceId == c.Id)
                                                                    {
                                                                        @if (c.IsCorrect)
                                                                        {
                                                                            <span class="badge bg-success ms-2">
                                                                                <i class="bi bi-check-circle me-1"></i>Doğru Seçim
                                                                            </span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-danger ms-2">
                                                                                <i class="bi bi-x-circle me-1"></i>Yanlış Seçim
                                                                            </span>
                                                                        }
                                                                    }
                                                                </div>
                                                                @if (c.IsCorrect && a.SelectedChoiceId != c.Id)
                                                                {
                                                                    <span class="badge bg-light text-success border border-success">
                                                                        <i class="bi bi-star me-1"></i>Doğru Cevap
                                                                    </span>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Şık yok</span>
                                            }
                                        </td>

                                        <!-- DOSYA -->
                                        <td class="pe-4">
                                            @if (!string.IsNullOrEmpty(a.FilePath))
                                            {
                                                <a href="@Url.Content(a.FilePath)"
                                                   target="_blank"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-file-earmark-arrow-down me-1"></i>Dosyayı Gör
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent border-top p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            @Model.Count() adet cevap listeleniyor
                        </small>
                        <button class="btn btn-secondary" onclick="history.back()">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </button>
                    </div>
                </div>
            </div>

            <!-- Değerlendirme Bölümü -->
            @{
                var firstAnswer = Model.FirstOrDefault();
                var isAutoGraded = firstAnswer?.StudentExam?.Exam?.IsAutoGraded ?? false;
            }

            @if (isAutoGraded)
            {
                <div class="alert alert-info border-0 rounded-3 shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-robot display-6 text-primary me-3"></i>
                        <div>
                            <h4 class="alert-heading mb-2">Otomatik Değerlendirme</h4>
                            <p class="mb-0">
                                Bu sınav otomatik değerlendirilmiştir. Manuel not verme kapalıdır.
                                Sistem otomatik olarak doğru/yanlış şıkları değerlendirmiştir.
                            </p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-success text-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pencil-square me-2"></i>Not Ver
                        </h5>
                    </div>
                    
                    <div class="card-body p-4">
                        <form asp-controller="Teacher"
                              asp-action="SaveScore"
                              method="post"
                              class="row g-3 align-items-end">
                              
                            <input type="hidden" name="studentExamId" value="@ViewBag.StudentExamId" />
                            
                            <!-- Not Alanı -->
                            <div class="col-md-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-star me-1"></i>Not
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-123 text-primary"></i>
                                    </span>
                                    <input type="number"
                                           name="score"
                                           class="form-control"
                                           min="0"
                                           max="100"
                                           step="0.5"
                                           placeholder="0-100"
                                           required />
                                </div>
                            </div>
                            
                            <!-- Notu Göster Seçeneği -->
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-eye me-1"></i>Notu Öğrenciye Göster
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-person-check text-primary"></i>
                                    </span>
                                    <select name="shareScore" class="form-select">
                                        <option value="true">Evet, öğrenci görsün</option>
                                        <option value="false">Hayır, gizli kalsın</option>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Gönder Butonu -->
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle me-2"></i>Notu Kaydet
                                </button>
                            </div>
                            
                            <!-- Bilgilendirme -->
                            <div class="col-md-2">
                                <div class="text-center">
                                    <div class="bg-light border rounded-3 p-2">
                                        <small class="text-muted d-block">Maksimum</small>
                                        <strong class="text-success">100 Puan</strong>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Inline Styles -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05) !important;
    }
    
    .table th {
        border-bottom: 2px solid #dee2e6;
    }
    
    .table td {
        border-bottom: 1px solid #dee2e6;
        vertical-align: middle;
    }
    
    .list-group-item:hover {
        background-color: rgba(102, 126, 234, 0.03);
    }
    
    .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }
</style>