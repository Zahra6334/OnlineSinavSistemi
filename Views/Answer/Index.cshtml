@model IEnumerable<OnlineSinavSistemi.Models.Answer>

@{
    ViewData["Title"] = "Öğrenci Cevapları";
    var firstAnswer = Model.FirstOrDefault();
    var isAutoGraded = firstAnswer?.StudentExam?.Exam?.IsAutoGraded ?? false;
    var studentName = firstAnswer?.StudentExam?.Student?.full_name ?? "Öğrenci";
    var examTitle = firstAnswer?.StudentExam?.Exam?.Title ?? "Sınav";
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --info-color: #17a2b8;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .answers-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        color: var(--primary-color);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background: var(--accent-color);
            border-radius: 2px;
        }

    .student-info-card {
        background: var(--white);
        border-radius: 20px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        border-left: 5px solid var(--primary-color);
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .student-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--white);
        flex-shrink: 0;
    }

    .student-details {
        flex: 1;
        min-width: 300px;
    }

    .student-name {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 5px;
    }

    .exam-info {
        display: flex;
        gap: 20px;
        margin-top: 15px;
        flex-wrap: wrap;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-light);
    }

        .info-item i {
            color: var(--accent-color);
            font-size: 1.2rem;
        }

    .answers-container {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .answers-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        color: var(--white);
        padding: 20px 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
    }

        .answers-header h3 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 600;
        }

    .answers-count {
        background: rgba(255, 255, 255, 0.2);
        padding: 5px 15px;
        border-radius: 50px;
        font-weight: 600;
    }

    .answers-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .answers-table thead {
            background: var(--secondary-color);
        }

        .answers-table th {
            padding: 20px 15px;
            font-weight: 600;
            color: var(--primary-color);
            text-align: left;
            border-bottom: 2px solid var(--primary-color);
            font-size: 1.1rem;
        }

        .answers-table tbody tr {
            transition: var(--transition);
            border-bottom: 1px solid #f0f0f0;
        }

            .answers-table tbody tr:hover {
                background: rgba(44, 90, 160, 0.03);
            }

        .answers-table td {
            padding: 25px 15px;
            vertical-align: top;
            border-bottom: 1px solid #f0f0f0;
        }

        .answers-table tr:last-child td {
            border-bottom: none;
        }

    .question-cell {
        min-width: 250px;
        max-width: 300px;
    }

    .question-text {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 10px;
        line-height: 1.5;
    }

    .question-meta {
        display: flex;
        gap: 10px;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .question-type {
        padding: 3px 10px;
        border-radius: 5px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .type-text {
        background: rgba(23, 162, 184, 0.1);
        color: var(--info-color);
    }

    .type-multiple {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .type-file {
        background: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
    }

    .answer-cell {
        min-width: 200px;
    }

    .answer-text-content {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        margin-top: 10px;
        border-left: 3px solid var(--primary-color);
        line-height: 1.6;
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .no-answer {
        color: var(--text-light);
        font-style: italic;
    }

    .choices-cell {
        min-width: 250px;
    }

    .choices-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .choice-item {
        padding: 10px 15px;
        margin-bottom: 8px;
        border-radius: 8px;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        position: relative;
        transition: var(--transition);
    }

        .choice-item:hover {
            transform: translateX(5px);
        }

    .choice-text {
        display: block;
        margin-bottom: 5px;
        color: var(--text-dark);
    }

    .choice-status {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.85rem;
        font-weight: 500;
        padding: 3px 10px;
        border-radius: 15px;
    }

    .selected-choice {
        background: rgba(44, 90, 160, 0.1);
        border-color: var(--primary-color);
        border-left: 4px solid var(--primary-color);
    }

    .correct-choice {
        color: var(--success-color);
        background: rgba(40, 167, 69, 0.1);
    }

    .wrong-choice {
        color: var(--danger-color);
        background: rgba(231, 76, 60, 0.1);
    }

    .correct-answer {
        color: var(--success-color);
        background: rgba(40, 167, 69, 0.1);
    }

    .file-cell {
        min-width: 150px;
    }

    .file-download-btn {
        background: rgba(44, 90, 160, 0.1);
        color: var(--primary-color);
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        border: 1px solid rgba(44, 90, 160, 0.2);
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .file-download-btn:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
        }

    .grading-section {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        padding: 30px;
        margin-bottom: 30px;
        border-top: 5px solid var(--accent-color);
    }

    .grading-header {
        margin-bottom: 25px;
    }

        .grading-header h3 {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.6rem;
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 0 0 10px 0;
        }

    .auto-grade-alert {
        background: rgba(23, 162, 184, 0.1);
        border: 1px solid rgba(23, 162, 184, 0.2);
        color: var(--info-color);
        padding: 20px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
    }

        .auto-grade-alert i {
            font-size: 1.8rem;
            flex-shrink: 0;
        }

    .grading-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        align-items: end;
    }

    .form-group {
        margin-bottom: 0;
    }

    .form-label {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 10px;
        display: block;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control, .form-select {
        border: 2px solid #e1e8f0;
        border-radius: 12px;
        padding: 14px 18px;
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 90, 160, 0.1);
            outline: none;
        }

    .btn-submit {
        background: linear-gradient(135deg, var(--success-color) 0%, #1e7e34 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        height: 52px;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            color: white;
        }

    .btn-back {
        background: transparent;
        color: var(--text-light);
        padding: 16px 35px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        border: 2px solid #e1e8f0;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-back:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

    .score-preview {
        display: flex;
        align-items: center;
        gap: 20px;
        background: var(--secondary-color);
        padding: 20px;
        border-radius: 15px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .current-score {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary-color);
    }

    .score-label {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    @@media (max-width: 768px) {
        .answers-table

    {
        display: block;
        overflow-x: auto;
    }

    .answers-table th,
    .answers-table td {
        min-width: 200px;
    }

    .student-info-card {
        padding: 20px;
    }

    .student-avatar {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }

    .student-name {
        font-size: 1.5rem;
    }

    .page-title {
        font-size: 2rem;
    }

    .grading-form {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-submit,
    .btn-back {
        width: 100%;
    }

    }

    /* Animasyonlar */
    .answers-table tbody tr {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .student-info-card,
    .grading-section {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

    .student-info-card {
        animation-delay: 0.1s;
    }

    .grading-section {
        animation-delay: 0.2s;
    }
</style>

<div class="answers-section">
    <div class="container">
        <!-- Sayfa Başlığı -->
        <div class="page-header">
            <h1 class="page-title">Öğrenci Cevapları</h1>
        </div>

        <!-- Öğrenci Bilgileri -->
        <div class="student-info-card">
            <div class="student-avatar">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="student-details">
                <div class="student-name">@studentName</div>
                <div class="exam-info">
                    <div class="info-item">
                        <i class="fas fa-file-alt"></i>
                        <span>@examTitle</span>
                    </div>
                    @if (firstAnswer?.StudentExam?.Score.HasValue == true)
                    {
                        <div class="info-item">
                            <i class="fas fa-star"></i>
                            <span>Not: @firstAnswer.StudentExam.Score.Value.ToString("F1")</span>
                        </div>
                    }
                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <span>@Model.Count() Soru</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cevaplar Tablosu -->
        <div class="answers-container">
            <div class="answers-header">
                <h3><i class="fas fa-list-check"></i> Cevaplar</h3>
                <div class="answers-count">
                    @Model.Count() Soru
                </div>
            </div>

            <div class="table-responsive">
                <table class="answers-table">
                    <thead>
                        <tr>
                            <th class="question-cell">SORU</th>
                            <th class="answer-cell">KLASİK CEVAP</th>
                            <th class="choices-cell">ŞIKLAR VE SEÇİM</th>
                            <th class="file-cell">DOSYA</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            var questionType = string.IsNullOrEmpty(a.AnswerText) && a.Question?.Choices?.Any() == true ? "multiple" :
                            !string.IsNullOrEmpty(a.FilePath) ? "file" : "text";
                            var questionTypeClass = questionType == "multiple" ? "type-multiple" :
                            questionType == "file" ? "type-file" : "type-text";
                            var questionTypeText = questionType == "multiple" ? "Çoktan Seçmeli" :
                            questionType == "file" ? "Dosya Yükleme" : "Klasik";

                            <tr style="animation-delay: @(0.05 * Model.ToList().IndexOf(a))s">
                                <!-- SORU -->
                                <td class="question-cell">
                                    <div class="question-text">
                                        @(a.Question != null ? a.Question.QuestionText : "Soru bulunamadı")
                                    </div>
                                    <div class="question-meta">
                                        <span class="question-type @questionTypeClass">
                                            <i class="fas @(questionType == "multiple" ? "fa-list-ol" : questionType == "file" ? "fa-file-upload" : "fa-keyboard")"></i>
                                            @questionTypeText
                                        </span>
                                    </div>
                                </td>

                                <!-- KLASİK CEVAP -->
                                <td class="answer-cell">
                                    @if (!string.IsNullOrWhiteSpace(a.AnswerText))
                                    {
                                        <div class="answer-text-content">
                                            @a.AnswerText
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="no-answer">
                                            <i class="fas fa-minus"></i> Cevap yok
                                        </span>
                                    }
                                </td>

                                <!-- ŞIKLAR -->
                                <td class="choices-cell">
                                    @if (a.Question?.Choices != null && a.Question.Choices.Any())
                                    {
                                        <ul class="choices-list">
                                            @foreach (var c in a.Question.Choices)
                                            {
                                                var isSelected = a.SelectedChoiceId == c.Id;
                                                var choiceClass = isSelected ? "selected-choice" : "";
                                                var statusText = "";
                                                var statusClass = "";

                                                if (isSelected)
                                                {
                                                    if (c.IsCorrect)
                                                    {
                                                        statusText = "Doğru Seçim";
                                                        statusClass = "correct-choice";
                                                    }
                                                    else
                                                    {
                                                        statusText = "Yanlış Seçim";
                                                        statusClass = "wrong-choice";
                                                    }
                                                }
                                                else if (c.IsCorrect)
                                                {
                                                    statusText = "Doğru Şık";
                                                    statusClass = "correct-answer";
                                                }

                                                <li class="choice-item @choiceClass">
                                                    <span class="choice-text">
                                                        <i class="fas @(isSelected ? "fa-check-circle" : "fa-circle")"></i>
                                                        @c.Text
                                                    </span>
                                                    @if (!string.IsNullOrEmpty(statusText))
                                                    {
                                                        <span class="choice-status @statusClass">
                                                            <i class="fas @(c.IsCorrect ? "fa-check" : "fa-times")"></i>
                                                            @statusText
                                                        </span>
                                                    }
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="no-answer">
                                            <i class="fas fa-minus"></i> Şık yok
                                        </span>
                                    }
                                </td>

                                <!-- DOSYA -->
                                <td class="file-cell">
                                    @if (!string.IsNullOrEmpty(a.FilePath))
                                    {
                                        <a href="@Url.Content(a.FilePath)"
                                           target="_blank"
                                           class="file-download-btn">
                                            <i class="fas fa-download"></i>
                                            Dosyayı İndir
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="no-answer">
                                            <i class="fas fa-minus"></i> Dosya yok
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Not Verme Bölümü -->
        <div class="grading-section">
            <div class="grading-header">
                <h3><i class="fas fa-graduation-cap"></i> Değerlendirme</h3>
            </div>

            @if (isAutoGraded)
            {
                <div class="auto-grade-alert">
                    <i class="fas fa-robot"></i>
                    <div>
                        <strong>Bu sınav otomatik değerlendirilmiştir.</strong>
                        <p class="mb-0">Manuel not verme kapalıdır. Sistem otomatik olarak puanlamıştır.</p>
                    </div>
                </div>
            }
            else
            {
                <!-- Mevcut Not Bilgisi -->
                @if (firstAnswer?.StudentExam?.Score.HasValue == true)
                {
                    <div class="score-preview">
                        <div>
                            <div class="current-score">@firstAnswer.StudentExam.Score.Value.ToString("F1")</div>
                            <div class="score-label">Mevcut Not</div>
                        </div>
                        <div>
                            <p class="mb-0">Öğrencinin mevcut notu yukarıda görülmektedir. Yeni bir not girerek güncelleyebilirsiniz.</p>
                        </div>
                    </div>
                }

                <!-- Not Verme Formu -->
                <form asp-controller="Teacher"
                      asp-action="SaveScore"
                      method="post"
                      id="gradingForm"
                      class="grading-form">

                    <input type="hidden" name="studentExamId" value="@ViewBag.StudentExamId" />

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-star"></i> Not
                        </label>
                        <input type="number"
                               name="score"
                               class="form-control"
                               min="0"
                               max="100"
                               step="0.5"
                               value="@(firstAnswer?.StudentExam?.Score?.ToString("F1") ?? "0")"
                               placeholder="0-100 arası not giriniz"
                               required />
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-eye"></i> Notu Göster
                        </label>
                        <select name="shareScore" class="form-select">
                            <option value="true" selected>Evet, öğrenci notunu görebilir</option>
                            <option value="false">Hayır, notu gizle</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn-submit" id="submitBtn">
                            <i class="fas fa-save"></i>
                            <span>Notu Kaydet</span>
                        </button>
                    </div>
                </form>
            }

            <!-- Geri Dön Butonu -->
            <div class="action-buttons mt-4">
                <button class="btn-back" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i>
                    <span>Geri Dön</span>
                </button>
            </div>
        </div>
    </div>
</div>

