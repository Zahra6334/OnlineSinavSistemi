<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tablo satır animasyonları
        const tableRows = document.querySelectorAll('.answers-table tbody tr');
        tableRows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
        });

        // Not verme formu gönderimi
        const gradingForm = document.getElementById('gradingForm');
        const submitBtn = document.getElementById('submitBtn');

        if (gradingForm) {
            gradingForm.addEventListener('submit', function(e) {
                e.preventDefault();

                const scoreInput = this.querySelector('input[name="score"]');
                const score = parseFloat(scoreInput.value);

                if (score < 0 || score > 100) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Geçersiz Not',
                        text: 'Lütfen 0-100 arasında bir not giriniz.',
                        confirmButtonColor: var('--danger-color')
                    });
                    return;
                }

                // Buton durumunu değiştir
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Kaydediliyor...</span>';
                submitBtn.disabled = true;

                // Formu gönder
                this.submit();
            });
        }

        // Dosya indirme butonlarına tooltip ekle
        const fileButtons = document.querySelectorAll('.file-download-btn');
        fileButtons.forEach(button => {
            button.title = 'Dosyayı yeni sekmede aç';
        });

        // Şık seçimlerine tıklanabilirlik efekti
        const choiceItems = document.querySelectorAll('.choice-item');
        choiceItems.forEach(item => {
            item.style.cursor = 'pointer';
            item.addEventListener('click', function() {
                this.style.transform = 'translateX(0)';
                setTimeout(() => {
                    this.style.transform = 'translateX(5px)';
                }, 100);
            });
        });
    });
</script>

