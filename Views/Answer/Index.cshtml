@model IEnumerable<OnlineSinavSistemi.Models.Answer>

@{
    ViewData["Title"] = "Öðrenci Cevaplarý";
}

<h2>Öðrenci Cevaplarý</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Soru</th>
            <th>Cevap (Klasik)</th>
            <th>Seçilen Þýk</th>
            <th>Dosya</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Question.QuestionText</td>

                <td>
                    @if (!string.IsNullOrEmpty(a.AnswerText))
                    {
                        @a.AnswerText
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <td>
                    @(a.SelectedChoiceId.HasValue? a.SelectedChoiceId.ToString() : "—")
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(a.FilePath))
                    {
                        <a href="@Url.Content(a.FilePath)" target="_blank">Dosya</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-secondary" onclick="history.back()">Geri</button>

