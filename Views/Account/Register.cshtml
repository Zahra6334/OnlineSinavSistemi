@model OnlineSinavSistemi.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayýt Ol - Online Sýnav Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #b29f91;
            --secondary-color: #F5E9D4;
            --accent-color: #8B7D7B;
            --dark-color: #5D4037;
            --light-color: #FDF6E3;
        }

        body {
            background: linear-gradient(135deg, var(--secondary-color) 0%, #ffffff 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }

        .register-container {
            max-width: 500px;
            width: 100%;
            margin: 0 auto;
        }

        .register-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .register-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

            .register-header h2 {
                margin: 0;
                font-weight: 700;
            }

            .register-header p {
                margin: 0.5rem 0 0;
                opacity: 0.9;
            }

        .register-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(178, 159, 145, 0.25);
            }

        .btn-register {
            background: var(--primary-color);
            border: none;
            color: white;
            padding: 12px;
            font-weight: 600;
            border-radius: 10px;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

            .btn-register:hover {
                background: var(--accent-color);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .login-link {
            text-align: center;
            margin-top: 1.5rem;
            color: var(--accent-color);
        }

            .login-link a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 600;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        .role-option {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .role-option:hover {
                border-color: var(--primary-color);
            }

            .role-option.selected {
                border-color: var(--primary-color);
                background-color: rgba(178, 159, 145, 0.1);
            }

        .role-icon {
            font-size: 1.5rem;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .validation-summary-errors {
            color: #dc3545;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 12px;
            margin-bottom: 1.5rem;
        }

        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        .input-validation-error {
            border-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <h2><i class="fas fa-user-plus me-2"></i>Kayýt Ol</h2>
                <p>Online Sýnav Sistemine Hoþ Geldiniz</p>
            </div>

            <div class="register-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Ad Soyad</label>
                        <input asp-for="Name" class="form-control" placeholder="Adýnýz ve soyadýnýz" />
                        <span asp-validation-for="Name" class="field-validation-error"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta Adresi</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Þifre</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="En az 6 karakter" />
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Hesap Türü</label>
                        <div class="role-options">
                            <div class="role-option selected" data-value="Teacher">
                                <div class="role-icon">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                </div>
                                <h5 class="mb-1">Öðretmen</h5>
                            </div>
                            <div class="role-option" data-value="Student">
                                <div class="role-icon">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                                <h5 class="mb-1">Öðrenci</h5>
                            </div>
                        </div>
                        <select asp-for="Rol" class="form-control d-none" id="roleSelect">
                            <option value="Teacher">Öðretmen</option>
                            <option value="Student">Öðrenci</option>
                        </select>
                        <span asp-validation-for="Rol" class="field-validation-error"></span>
                    </div>

                    <button type="submit" class="btn btn-register">
                        <i class="fas fa-user-plus me-2"></i>Hesap Oluþtur
                    </button>

                    <div class="login-link">
                        Zaten hesabýnýz var mý? <a asp-controller="Account" asp-action="Login">Giriþ Yapýn</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Rol seçimi için JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const roleOptions = document.querySelectorAll('.role-option');
            const roleSelect = document.getElementById('roleSelect');

            roleOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Tüm seçeneklerden seçili class'ýný kaldýr
                    roleOptions.forEach(opt => opt.classList.remove('selected'));

                    // Týklanan seçeneði seçili yap
                    this.classList.add('selected');

                    // Select elementini güncelle
                    const value = this.getAttribute('data-value');
                    roleSelect.value = value;
                });
            });

            // Sayfa yüklendiðinde doðru seçeneði iþaretle
            const currentValue = roleSelect.value;
            const currentOption = document.querySelector(`.role-option[data-value="${currentValue}"]`);
            if (currentOption) {
                roleOptions.forEach(opt => opt.classList.remove('selected'));
                currentOption.classList.add('selected');
            }
        });
    </script>
</body>
</html>