@model OnlineSinavSistemi.Models.ApplicationUser
@{
    ViewData["Title"] = "Hesap Ayarları";

    // Kullanıcının gerçek rolünü doğru şekilde al
    var userRole = Model.Rol?.ToUpper() ?? "OGRENCI"; // Büyük harfe çevir ve kontrol et

    // Rol değerlerini kontrol et
    var rol = "";
    var rolIcon = "";
    var rolColor = "";

    // Rol kontrolü
    if (userRole.Contains("OGRETMEN") || userRole.Contains("ÖĞRETMEN") || userRole.Contains("TEACHER"))
    {
        rol = "Öğretmen";
        rolIcon = "👨‍🏫";
        rolColor = "#2c5aa0";
    }
    else if (userRole.Contains("ADMIN") || userRole.Contains("YONETICI") || userRole.Contains("YÖNETİCİ"))
    {
        rol = "Yönetici";
        rolIcon = "👨‍💼";
        rolColor = "#dc3545";
    }
    else
    {
        rol = "Öğrenci";
        rolIcon = "👨‍🎓";
        rolColor = "#28a745";
    }

    // Debug için rol değerini göster
    var debugInfo = $"Rol Değeri: {Model.Rol}, İşlenmiş: {rol}";
}

<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-dark: #1a3a6d;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --gray-light: #f8f9fa;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --shadow-hover: 0 15px 40px rgba(44, 90, 160, 0.15);
        --transition: all 0.3s ease;
        --border-radius: 12px;
    }

    /* Debug info - sadece geliştirme ortamında görünsün */
    .debug-info {
        position: fixed;
        top: 10px;
        right: 10px;
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
        z-index: 9999;
        display: none; /* Geliştirme için açabilirsiniz */
    }

    .account-settings-container {
        min-height: 80vh;
        padding: 40px 20px;
        background: linear-gradient(135deg, var(--gray-light) 0%, #eef2f7 100%);
    }

    .settings-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(44, 90, 160, 0.1);
        margin-bottom: 30px;
        overflow: hidden;
    }

    .settings-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 30px;
        border-radius: 20px 20px 0 0;
        position: relative;
        overflow: hidden;
    }

        .settings-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,20 Q50,0 100,20 L100,100 L0,100 Z" fill="rgba(255,255,255,0.05)"/></svg>');
            background-size: 100% 100px;
            background-position: top;
        }

    .settings-title {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 10px;
        position: relative;
        z-index: 1;
    }

    .settings-subtitle {
        opacity: 0.9;
        font-size: 1rem;
        z-index: 1;
        position: relative;
    }

    .account-profile-card {
        padding: 25px;
        background: var(--white);
        border-bottom: 1px solid rgba(0,0,0,0.05);
        transition: var(--transition);
    }

        .account-profile-card:hover {
            background-color: rgba(233, 242, 249, 0.3);
        }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .role-avatar {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, @rolColor, @rolColor );
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--white);
        font-size: 1.8rem;
        margin-right: 20px;
        border: 3px solid var(--accent-color);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .profile-info {
        flex: 1;
    }

        .profile-info h4 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 5px;
        }

        .profile-info .email {
            color: var(--text-light);
            margin-bottom: 0;
            font-size: 0.95rem;
        }

    .role-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-top: 8px;
    }

        .role-badge.ogrenci {
            background: rgba(40, 167, 69, 0.1);
            color: var(--success-color);
        }

        .role-badge.ogretmen {
            background: rgba(44, 90, 160, 0.1);
            color: var(--primary-color);
        }

        .role-badge.admin {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger-color);
        }

    .role-display {
        font-weight: 700;
        font-size: 1.1rem;
        color: @rolColor;
        margin-bottom: 5px;
    }

    .view-details {
        color: var(--primary-color);
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .view-details:hover {
            color: var(--primary-dark);
            transform: translateX(5px);
        }

    .settings-items-list {
        padding: 0;
        margin: 0;
    }

    .settings-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 18px 25px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        transition: var(--transition);
        cursor: pointer;
    }

        .settings-item:last-child {
            border-bottom: none;
        }

        .settings-item:hover {
            background-color: rgba(233, 242, 249, 0.3);
            padding-left: 30px;
        }

    .item-left {
        display: flex;
        align-items: center;
    }

    .item-icon {
        width: 40px;
        height: 40px;
        background: rgba(44, 90, 160, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        color: var(--primary-color);
        font-size: 1.2rem;
        transition: var(--transition);
    }

    .settings-item:hover .item-icon {
        background: var(--primary-color);
        color: var(--white);
        transform: scale(1.1);
    }

    .item-content h5 {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 3px;
        font-size: 1rem;
    }

    .item-content p {
        font-size: 0.85rem;
        color: var(--text-light);
        margin-bottom: 0;
    }

    .item-right {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-active {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .status-new {
        background: rgba(212, 175, 55, 0.1);
        color: var(--accent-color);
    }

    .status-unknown {
        background: rgba(108, 117, 125, 0.1);
        color: #6c757d;
    }

    .arrow-icon {
        color: #adb5bd;
        font-size: 0.9rem;
        transition: var(--transition);
    }

    .settings-item:hover .arrow-icon {
        color: var(--primary-color);
        transform: translateX(3px);
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 700;
        margin: 25px 0 15px 25px;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
    }

        .section-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }

    .accounts-section {
        margin-top: 30px;
    }

    .accounts-card {
        background: var(--white);
        border-radius: 15px;
        box-shadow: var(--shadow);
        overflow: hidden;
        margin-top: 15px;
    }

    .account-item {
        display: flex;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        transition: var(--transition);
    }

        .account-item:hover {
            background-color: rgba(233, 242, 249, 0.3);
        }

        .account-item:last-child {
            border-bottom: none;
        }

    .account-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        color: var(--white);
        font-size: 1.5rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

        .account-icon.ogrenci {
            background: linear-gradient(135deg, var(--success-color), #1e7e34);
        }

        .account-icon.ogretmen {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        }

        .account-icon.admin {
            background: linear-gradient(135deg, var(--danger-color), #bd2130);
        }

        .account-icon.university {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

    .account-details {
        flex: 1;
    }

        .account-details h6 {
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 3px;
        }

        .account-details p {
            color: var(--text-light);
            font-size: 0.9rem;
            margin-bottom: 0;
        }

    .account-active {
        color: var(--primary-color);
        font-size: 1.3rem;
    }

    .add-account-item {
        display: flex;
        align-items: center;
        padding: 20px;
        color: var(--primary-color);
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        border: 2px dashed rgba(44, 90, 160, 0.3);
        border-radius: 10px;
        margin-top: 15px;
        background: rgba(233, 242, 249, 0.3);
    }

        .add-account-item:hover {
            background: rgba(44, 90, 160, 0.1);
            border-color: var(--primary-color);
            transform: translateY(-2px);
        }

        .add-account-item i {
            margin-right: 15px;
            font-size: 1.3rem;
        }

    .account-actions {
        padding: 25px;
        text-align: center;
        background: rgba(233, 242, 249, 0.3);
        border-radius: 0 0 20px 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .btn-action {
        padding: 12px 30px;
        border-radius: var(--border-radius);
        font-weight: 600;
        transition: var(--transition);
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        min-width: 180px;
    }

    .btn-save {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: var(--white);
    }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
        }

    .btn-reset {
        background: var(--white);
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
    }

        .btn-reset:hover {
            background: var(--primary-color);
            color: var(--white);
            transform: translateY(-3px);
        }

    /* Role-specific features */
    .role-specific-features {
        margin: 25px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(233, 242, 249, 0.5) 0%, rgba(220, 248, 233, 0.3) 100%);
        border-radius: var(--border-radius);
        border-left: 4px solid @rolColor;
    }

    .role-features-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .feature-list li {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            color: var(--text-dark);
        }

        .feature-list i {
            color: @rolColor;
            margin-right: 10px;
            font-size: 0.9rem;
        }

    /* Role display highlight */
    .role-highlight {
        display: inline-block;
        padding: 2px 10px;
        background: @rolColor;
        color: white;
        border-radius: 4px;
        font-weight: 600;
        margin-left: 5px;
    }

    @@media (max-width: 768px) {
        .account-settings-container

    {
        padding: 20px 15px;
    }

    .settings-header {
        padding: 20px;
    }

    .settings-title {
        font-size: 1.7rem;
    }

    .profile-header {
        flex-direction: column;
        text-align: center;
    }

    .role-avatar {
        margin-right: 0;
        margin-bottom: 15px;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-action {
        width: 100%;
    }

    .settings-item {
        padding: 15px;
    }

    .account-item {
        padding: 15px;
    }

    }

    @@media (max-width: 576px) {
        .settings-item

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .item-right {
        width: 100%;
        justify-content: space-between;
    }

    }
</style>

<!-- Debug info (geliştirme için aç) -->
@* <div class="debug-info">@debugInfo</div> *@

<div class="account-settings-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="settings-card">
                    <!-- Header -->
                    <div class="settings-header">
                        <h1 class="settings-title">Hesap Ayarları</h1>
                        <p class="settings-subtitle">Hesap bilgilerinizi görüntüleyin ve yönetin</p>
                    </div>

                    <!-- Profile Card -->
                    <div class="account-profile-card">
                        <div class="profile-header">
                            <div class="role-avatar">
                                @rolIcon
                            </div>
                            <div class="profile-info">
                                <div class="role-display">@rol</div>
                                <h4>@Model.Email</h4>
                                <p class="email">@Model.full_name</p>
                                <span class="role-badge @rol.ToLower()">@rol</span>
                            </div>
                            <div class="view-details" onclick="showAccountDetails()">
                                Detayları Gör <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>

                        <!-- Role Specific Features -->
                        <div class="role-specific-features">
                            <h5 class="role-features-title">
                                @rol Özellikleri
                                @if (rol == "Öğrenci")
                                {
                                    <i class="fas fa-graduation-cap"></i>
                                }
                                else if (rol == "Öğretmen")
                                {
                                    <i class="fas fa-chalkboard-teacher"></i>
                                }
                                else
                                {
                                    <i class="fas fa-user-shield"></i>
                                }
                            </h5>
                            <ul class="feature-list">
                                @if (rol == "Öğrenci")
                                {
                                    <li><i class="fas fa-check-circle"></i> Sınavlara katılma</li>
                                    <li><i class="fas fa-check-circle"></i> Sonuçları görüntüleme</li>
                                    <li><i class="fas fa-check-circle"></i> Dersleri takip etme</li>
                                    <li><i class="fas fa-check-circle"></i> Hatırlatıcı oluşturma</li>
                                }
                                else if (rol == "Öğretmen")
                                {
                                    <li><i class="fas fa-check-circle"></i> Sınav oluşturma ve yönetme</li>
                                    <li><i class="fas fa-check-circle"></i> Öğrenci değerlendirme</li>
                                    <li><i class="fas fa-check-circle"></i> Ders materyali yükleme</li>
                                    <li><i class="fas fa-check-circle"></i> Detaylı rapor oluşturma</li>
                                }
                                else
                                {
                                    <li><i class="fas fa-check-circle"></i> Sistem yönetimi</li>
                                    <li><i class="fas fa-check-circle"></i> Kullanıcı yönetimi</li>
                                    <li><i class="fas fa-check-circle"></i> Raporlama ve analiz</li>
                                    <li><i class="fas fa-check-circle"></i> Ayarlar yönetimi</li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Settings Items -->
                    <ul class="settings-items-list">
                        <li class="settings-item" onclick="showSetting('status')">
                            <div class="item-left">
                                <div class="item-icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div class="item-content">
                                    <h5>Hesap İstatistikleri</h5>
                                    <p>Hesap aktiviteleriniz ve istatistikler</p>
                                </div>
                            </div>
                            <div class="item-right">
                                <span class="status-badge status-unknown">İncele</span>
                                <i class="fas fa-chevron-right arrow-icon"></i>
                            </div>
                        </li>

                        <li class="settings-item" onclick="showSetting('profile')">
                            <div class="item-left">
                                <div class="item-icon">
                                    <i class="fas fa-user-edit"></i>
                                </div>
                                <div class="item-content">
                                    <h5>Profil Bilgileri</h5>
                                    <p>Kişisel bilgilerinizi düzenleyin</p>
                                </div>
                            </div>
                            <div class="item-right">
                                <span class="status-badge status-new">Güncelle</span>
                                <i class="fas fa-chevron-right arrow-icon"></i>
                            </div>
                        </li>

                        <li class="settings-item" onclick="showSetting('notifications')">
                            <div class="item-left">
                                <div class="item-icon">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <div class="item-content">
                                    <h5>Bildirim Ayarları</h5>
                                    <p>Bildirim tercihlerinizi yönetin</p>
                                </div>
                            </div>
                            <div class="item-right">
                                <span class="status-badge status-active">Açık</span>
                                <i class="fas fa-chevron-right arrow-icon"></i>
                            </div>
                        </li>

                        <li class="settings-item" onclick="showSetting('security')">
                            <div class="item-left">
                                <div class="item-icon">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div class="item-content">
                                    <h5>Güvenlik Ayarları</h5>
                                    <p>Şifre ve güvenlik tercihleri</p>
                                </div>
                            </div>
                            <div class="item-right">
                                <i class="fas fa-chevron-right arrow-icon"></i>
                            </div>
                        </li>
                    </ul>

                    <!-- Accounts Section -->
                    <div class="accounts-section">
                        <h4 class="section-title">
                            <i class="fas fa-building"></i> Hesaplar ve Kuruluşlar
                        </h4>

                        <div class="accounts-card">
                            <!-- Personal Account -->
                            <div class="account-item" onclick="showAccountDetails()">
                                <div class="account-icon @rol.ToLower()">
                                    @rolIcon
                                </div>
                                <div class="account-details">
                                    <h6>@rol Hesabı <span class="role-highlight">@rol</span></h6>
                                    <p>@Model.Email</p>
                                </div>
                            </div>

                            <!-- University Account -->
                            <div class="account-item" onclick="showUniversityAccount()">
                                <div class="account-icon university">
                                    <i class="fas fa-university"></i>
                                </div>
                                <div class="account-details">
                                    <h6>Bingöl Üniversitesi</h6>
                                    <p>@Model.Email</p>
                                </div>
                                <div class="account-active">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Add Account -->
                        <div class="add-account-item" onclick="addNewAccount()">
                            <i class="fas fa-plus"></i>
                            Hesap Ekle
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="account-actions">
                        <div class="action-buttons">
                            <button class="btn-action btn-save" onclick="saveSettings()">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                            <button class="btn-action btn-reset" onclick="resetSettings()">
                                <i class="fas fa-undo"></i> Sıfırla
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Account Details Modal -->
<div id="accountModal" class="account-modal">
    <div class="account-modal-content">
        <h3 class="mb-3" style="color: var(--primary-color);">Hesap Detayları</h3>
        <div class="mb-3">
            <strong>Ad Soyad:</strong> @Model.full_name
        </div>
        <div class="mb-3">
            <strong>E-posta:</strong> @Model.Email
        </div>
        <div class="mb-3">
            <strong>Rol:</strong> <span class="role-badge @rol.ToLower()">@rol</span>
        </div>
        <div class="mb-3">
            <strong>Numara:</strong> @Model.Numara
        </div>
        @if (!string.IsNullOrEmpty(Model.Brans) && rol == "Öğretmen")
        {
            <div class="mb-3">
                <strong>Branş:</strong> @Model.Brans
            </div>
        }
        <div class="mb-3">
            <strong>Rol Kodu:</strong> <code>@Model.Rol</code>
        </div>
        <div class="text-end mt-4">
            <button class="btn btn-secondary" onclick="closeModal()">Kapat</button>
        </div>
    </div>
</div>

<script>
    function showAccountDetails() {
        document.getElementById('accountModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('accountModal').style.display = 'none';
    }

    function showSetting(type) {
        const settings = {
            'status': 'Hesap İstatistikleri',
            'profile': 'Profil Bilgileri',
            'notifications': 'Bildirim Ayarları',
            'security': 'Güvenlik Ayarları'
        };

        alert(`${settings[type]} sayfasına yönlendiriliyorsunuz...`);
        // Burada gerçek yönlendirme yapılacak
        // window.location.href = `/Settings/${type}`;
    }

    function showUniversityAccount() {
        alert('Bingöl Üniversitesi hesap detayları gösterilecek...');
    }

    function addNewAccount() {
        alert('Yeni hesap ekleme formu açılacak...');
    }

    function saveSettings() {
        // Kaydetme işlemi simülasyonu
        const btn = event.target;
        const originalText = btn.innerHTML;

        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...';
        btn.disabled = true;

        setTimeout(() => {
            alert('Ayarlar başarıyla kaydedildi!');
            btn.innerHTML = originalText;
            btn.disabled = false;
        }, 1500);
    }

    function resetSettings() {
        if (confirm('Tüm ayarları sıfırlamak istediğinize emin misiniz?')) {
            alert('Ayarlar sıfırlandı!');
        }
    }

    // Modal dışına tıklayınca kapat
    window.onclick = function(event) {
        const modal = document.getElementById('accountModal');
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }

    // ESC tuşuna basınca modal'ı kapat
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeModal();
        }
    });

    // Hover efektleri için
    document.addEventListener('DOMContentLoaded', function() {
        const settingsItems = document.querySelectorAll('.settings-item, .account-item, .add-account-item');

        settingsItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
            });

            item.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Konsola rol bilgisini yazdır (debug için)
        console.log('Kullanıcı Rolü:', '@rol');
        console.log('Rol Kodu:', '@Model.Rol');
        console.log('İşlenmiş Rol:', '@rol');
    });
</script>