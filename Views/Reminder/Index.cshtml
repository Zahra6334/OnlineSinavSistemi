@model IEnumerable<OnlineSinavSistemi.Models.Reminder>

<style>
    :root {
        --primary-color: #2c5aa0;
        --secondary-color: #e9f2f9;
        --accent-color: #d4af37;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #e74c3c;
        --info-color: #17a2b8;
        --text-dark: #333;
        --text-light: #555;
        --white: #ffffff;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .reminders-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e9f2f9 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        color: var(--primary-color);
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background: var(--accent-color);
            border-radius: 2px;
        }

    .page-subtitle {
        color: var(--text-light);
        font-size: 1.1rem;
        margin-top: 20px;
    }

    .reminders-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .reminder-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow);
        border: 2px solid transparent;
        transition: var(--transition);
        overflow: hidden;
        margin-bottom: 25px;
        position: relative;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

        .reminder-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px rgba(44, 90, 160, 0.15);
        }

        .reminder-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 8px;
            height: 100%;
        }

        .reminder-card.urgent::before {
            background: var(--danger-color);
        }

        .reminder-card.upcoming::before {
            background: var(--warning-color);
        }

        .reminder-card.future::before {
            background: var(--success-color);
        }

    .reminder-header {
        background: linear-gradient(135deg, #f8fafc 0%, var(--secondary-color) 100%);
        padding: 25px 30px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
    }

    .reminder-exam-info {
        display: flex;
        align-items: center;
        gap: 15px;
        flex: 1;
        min-width: 300px;
    }

    .exam-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a6d 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--white);
        flex-shrink: 0;
    }

    .exam-details {
        flex: 1;
    }

    .exam-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 5px;
        line-height: 1.3;
    }

    .exam-meta {
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 5px;
        color: var(--text-light);
        font-size: 0.9rem;
    }

        .meta-item i {
            color: var(--accent-color);
        }

    .reminder-time {
        background: rgba(44, 90, 160, 0.1);
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        color: var(--primary-color);
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

    .reminder-body {
        padding: 30px;
    }

    .reminder-message {
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--text-dark);
        margin-bottom: 20px;
        padding-left: 20px;
        border-left: 4px solid var(--accent-color);
        background: rgba(212, 175, 55, 0.05);
        padding: 20px;
        border-radius: 10px;
    }

    .reminder-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 25px;
    }

    .detail-card {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        border: 1px solid #e9ecef;
        transition: var(--transition);
    }

        .detail-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

    .detail-title {
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 10px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .detail-content {
        color: var(--text-dark);
        font-size: 1.1rem;
        font-weight: 500;
    }

    .time-remaining {
        font-weight: 700;
        font-size: 1.2rem;
        color: var(--danger-color);
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: rgba(233, 242, 249, 0.5);
        border-radius: 20px;
        border: 2px dashed #c0d4e8;
        margin-top: 40px;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #c0d4e8;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: var(--text-light);
        margin-bottom: 15px;
        font-size: 1.5rem;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto 30px;
        font-size: 1.1rem;
    }

    .stats-bar {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: var(--shadow);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-color);
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--text-light);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .urgency-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 10px;
    }

    .urgency-high {
        background: rgba(231, 76, 60, 0.1);
        color: var(--danger-color);
        border: 1px solid rgba(231, 76, 60, 0.2);
    }

    .urgency-medium {
        background: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

    .urgency-low {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
        border: 1px solid rgba(40, 167, 69, 0.2);
    }

    .filter-buttons {
        display: flex;
        gap: 10px;
        margin-bottom: 25px;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: var(--secondary-color);
        color: var(--text-light);
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 500;
        border: none;
        transition: var(--transition);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .filter-btn.active {
            background: var(--primary-color);
            color: white;
        }

        .filter-btn:hover {
            transform: translateY(-2px);
        }

    .reminder-footer {
        padding: 20px 30px;
        background: #f8f9fa;
        border-top: 1px solid #e9ecef;
        display: flex;
        justify-content: flex-end;
        gap: 15px;
    }

    .btn-action {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-view-exam {
        background: rgba(44, 90, 160, 0.1);
        color: var(--primary-color);
        border: 1px solid rgba(44, 90, 160, 0.2);
    }

        .btn-view-exam:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 90, 160, 0.2);
        }

    @@media (max-width: 768px) {
        .page-title

    {
        font-size: 2rem;
    }

    .reminder-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .reminder-time {
        align-self: flex-start;
    }

    .reminder-exam-info {
        min-width: 100%;
    }

    .exam-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
    }

    .reminder-details {
        grid-template-columns: 1fr;
    }

    .stats-bar {
        grid-template-columns: repeat(2, 1fr);
    }

    .filter-buttons {
        flex-direction: column;
    }

    .filter-btn {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 480px) {
        .stats-bar

    {
        grid-template-columns: 1fr;
    }

    .exam-icon {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
    }

    .exam-title {
        font-size: 1.2rem;
    }

    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .pulse-animation {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(231, 76, 60, 0.4);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(231, 76, 60, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(231, 76, 60, 0);
        }
    }
</style>

<div class="reminders-section">
    <div class="container">
        <!-- Sayfa Baþlýðý -->
        <div class="page-header">
            <h1 class="page-title">Yaklaþan Sýnav Hatýrlatýcýlarý</h1>
            <p class="page-subtitle">Planlanmýþ sýnavlarýnýz ve hatýrlatýcýlarýnýz burada listelenmektedir.</p>
        </div>

        <!-- Ýstatistikler -->
        @{
            var urgentReminders = Model.Where(r => (r.Date - DateTime.Now).TotalHours < 24).ToList();
            var upcomingReminders = Model.Where(r => (r.Date - DateTime.Now).TotalHours >= 24 && (r.Date - DateTime.Now).TotalHours < 72).ToList();
            var futureReminders = Model.Where(r => (r.Date - DateTime.Now).TotalHours >= 72).ToList();
        }

        @if (Model.Any())
        {
            <div class="stats-bar">
                <div class="stat-item">
                    <span class="stat-number">@Model.Count()</span>
                    <span class="stat-label">Toplam Hatýrlatýcý</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@urgentReminders.Count</span>
                    <span class="stat-label">Acil</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@upcomingReminders.Count</span>
                    <span class="stat-label">Yaklaþan</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@futureReminders.Count</span>
                    <span class="stat-label">Gelecek</span>
                </div>
            </div>

            <!-- Filtreler -->
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">
                    <i class="fas fa-list"></i> Tümü (@Model.Count())
                </button>
                <button class="filter-btn" data-filter="urgent">
                    <i class="fas fa-exclamation-triangle"></i> Acil (@urgentReminders.Count)
                </button>
                <button class="filter-btn" data-filter="upcoming">
                    <i class="fas fa-clock"></i> Yaklaþan (@upcomingReminders.Count)
                </button>
                <button class="filter-btn" data-filter="future">
                    <i class="fas fa-calendar-alt"></i> Gelecek (@futureReminders.Count)
                </button>
            </div>
        }

        <!-- Hatýrlatýcý Listesi -->
        <div class="reminders-container">
            @if (Model.Any())
            {
                var reminderIndex = 0;

                @foreach (var reminder in Model)
                {
                    var timeRemaining = reminder.Date - DateTime.Now;
                    var totalHours = timeRemaining.TotalHours;
                    var urgencyClass = totalHours < 24 ? "urgent" : totalHours < 72 ? "upcoming" : "future";
                    var urgencyText = totalHours < 24 ? "Acil" : totalHours < 72 ? "Yaklaþan" : "Gelecek";
                    var urgencyBadgeClass = totalHours < 24 ? "urgency-high" : totalHours < 72 ? "urgency-medium" : "urgency-low";

                    <div class="reminder-card @urgencyClass" style="animation-delay: @(reminderIndex * 0.1)s" data-urgency="@urgencyClass">
                        <div class="reminder-header">
                            <div class="reminder-exam-info">
                                <div class="exam-icon">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <div class="exam-details">
                                    <div class="exam-title">@reminder.Exam.Title</div>
                                    <div class="exam-meta">
                                        <span class="meta-item">
                                            <i class="fas fa-book"></i>
                                            <span>@reminder.Exam.Course?.CourseName</span>
                                        </span>
                                        <span class="meta-item">
                                            <i class="fas fa-clock"></i>
                                            <span>@reminder.Exam.DurationMinutes dakika</span>
                                        </span>
                                        <span class="urgency-badge @urgencyBadgeClass @(urgencyClass == "urgent" ? "pulse-animation" : "")">
                                            <i class="fas @(urgencyClass == "urgent" ? "fa-exclamation-triangle" : urgencyClass == "upcoming" ? "fa-clock" : "fa-calendar")"></i>
                                            @urgencyText
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="reminder-time">
                                <i class="fas fa-calendar-check"></i>
                                <span>@reminder.Date.ToString("dd MMMM yyyy HH:mm")</span>
                            </div>
                        </div>

                        <div class="reminder-body">
                            <div class="reminder-message">
                                <i class="fas fa-quote-left"></i>
                                @reminder.Message
                                <i class="fas fa-quote-right"></i>
                            </div>

                            <div class="reminder-details">
                                <div class="detail-card">
                                    <div class="detail-title">
                                        <i class="fas fa-hourglass-half"></i>
                                        Kalan Süre
                                    </div>
                                    <div class="detail-content time-remaining">
                                        @if (totalHours < 0)
                                        {
                                            <span>Süre doldu</span>
                                        }
                                        else if (totalHours < 1)
                                        {
                                            <span>@Math.Ceiling(timeRemaining.TotalMinutes) dakika</span>
                                        }
                                        else if (totalHours < 24)
                                        {
                                            <span>@Math.Ceiling(timeRemaining.TotalHours) saat</span>
                                        }
                                        else
                                        {
                                            <span>@Math.Ceiling(timeRemaining.TotalDays) gün</span>
                                        }
                                    </div>
                                </div>

                                <div class="detail-card">
                                    <div class="detail-title">
                                        <i class="fas fa-calendar-alt"></i>
                                        Baþlangýç Tarihi
                                    </div>
                                    <div class="detail-content">
                                        @reminder.Exam.StartDate.ToString("dd MMMM yyyy HH:mm")
                                    </div>
                                </div>

                                <div class="detail-card">
                                    <div class="detail-title">
                                        <i class="fas fa-chart-line"></i>
                                        Durum
                                    </div>
                                    <div class="detail-content">
                                        @if (reminder.Exam.IsPublished)
                                        {
                                            <span class="text-success">Yayýnlandý</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Yayýnlanmadý</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="reminder-footer">
                            <a href="/Exam/Details/@reminder.Exam.Id" class="btn-action btn-view-exam">
                                <i class="fas fa-eye"></i>
                                Sýnavý Görüntüle
                            </a>
                        </div>
                    </div>

                    reminderIndex++;
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-bell-slash"></i>
                    </div>
                    <h3>Henüz Hatýrlatýcý Yok</h3>
                    <p>Yaklaþan sýnavlarýnýz için henüz hatýrlatýcý oluþturulmamýþ. Yeni sýnavlar oluþturduðunuzda burada görünecekler.</p>
                </div>
            }
        </div>
    </div>
</div>

