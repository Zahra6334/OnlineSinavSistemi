<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filtreleme fonksiyonlarý
        const filterButtons = document.querySelectorAll('.filter-btn');
        const reminderCards = document.querySelectorAll('.reminder-card');

        // Filtre butonlarýna týklama
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Aktif butonu deðiþtir
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                // Filtreyi uygula
                applyFilter();
            });
        });

        function applyFilter() {
            const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;

            reminderCards.forEach(card => {
                const urgency = card.dataset.urgency;
                const matchesFilter =
                    activeFilter === 'all' ||
                    (activeFilter === 'urgent' && urgency === 'urgent') ||
                    (activeFilter === 'upcoming' && urgency === 'upcoming') ||
                    (activeFilter === 'future' && urgency === 'future');

                if (matchesFilter) {
                    card.style.display = 'block';
                    // Yeniden animasyon için
                    card.style.animation = 'fadeInUp 0.5s ease forwards';
                } else {
                    card.style.display = 'none';
                }
            });

            // Eðer hiç kart görünmüyorsa mesaj göster
            const visibleCards = Array.from(reminderCards).filter(card => card.style.display !== 'none');
            const emptyState = document.querySelector('.empty-state');

            if (visibleCards.length === 0 && reminderCards.length > 0) {
                if (!emptyState) {
                    // Filtre sonucu boþsa mesaj göster
                    const container = document.querySelector('.reminders-container');
                    const noResults = document.createElement('div');
                    noResults.className = 'empty-state';
                    noResults.innerHTML = `
                        <div class="empty-state-icon">
                            <i class="fas fa-filter"></i>
                        </div>
                        <h3>Sonuç Bulunamadý</h3>
                        <p>Seçtiðiniz kritere uygun hatýrlatýcý bulunmamaktadýr.</p>
                    `;
                    container.appendChild(noResults);
                }
            } else if (emptyState && emptyState.parentNode) {
                emptyState.parentNode.removeChild(emptyState);
            }
        }

        // Kart animasyonlarý
        reminderCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;

            // Acil hatýrlatýcýlar için pulsating efekti
            if (card.classList.contains('urgent')) {
                const badge = card.querySelector('.urgency-badge');
                if (badge) {
                    badge.classList.add('pulse-animation');
                }
            }
        });

        // Kalan süreleri real-time güncelle
        function updateRemainingTimes() {
            const timeElements = document.querySelectorAll('.time-remaining');

            timeElements.forEach(element => {
                const card = element.closest('.reminder-card');
                const dateText = card.querySelector('.reminder-time span').textContent;
                // Burada tarih parse edilip kalan süre hesaplanabilir
                // Basit bir örnek için þimdilik sadece gösteriyoruz
            });
        }

        // Her dakika kalan süreleri güncelle
        setInterval(updateRemainingTimes, 60000);

        // Sayfa yüklendiðinde filtreleri uygula
        applyFilter();

        // Ýstatistik sayma animasyonu
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const target = parseInt(stat.textContent);
            let current = 0;
            const increment = target / 30;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                stat.textContent = Math.round(current);
            }, 30);
        });
    });
</script>