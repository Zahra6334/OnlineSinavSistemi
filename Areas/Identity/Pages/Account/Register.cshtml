@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Yeni hesap oluştur</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- E-Posta -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Ad Soyad -->
            <div class="form-group mb-3">
                <label asp-for="Input.AdSoyad"></label>
                <input asp-for="Input.AdSoyad" class="form-control" />
                <span asp-validation-for="Input.AdSoyad" class="text-danger"></span>
            </div>

            <!-- Rol -->
            <div class="form-group mb-3">
                <label asp-for="Input.Rol"></label>
                <select asp-for="Input.Rol" class="form-control" id="roleSelect">
                    <option value="">Seçiniz</option>
                    <option value="Ogretmen">Öğretmen</option>
                    <option value="Ogrenci">Öğrenci</option>
                </select>
                <span asp-validation-for="Input.Rol" class="text-danger"></span>
            </div>

            <!-- Numara -->
            <div class="form-group mb-3">
                <label asp-for="Input.Numara"></label>
                <input asp-for="Input.Numara" class="form-control" />
                <span asp-validation-for="Input.Numara" class="text-danger"></span>
            </div>

            <!-- Branş (sadece öğretmende gözükecek) -->
            <div class="form-group mb-3" id="bransDiv" style="display:none;">
                <label asp-for="Input.Brans"></label>
                <input asp-for="Input.Brans" class="form-control" />
                <span asp-validation-for="Input.Brans" class="text-danger"></span>
            </div>

            <!-- Şifre -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Şifre tekrar -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Kayıt Ol</button>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Harici bir servisle kayıt ol</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p>
                        Harici kimlik doğrulama servisi yok. Daha fazla bilgi için
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715">buraya tıklayın</a>.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name">
                                        @provider.DisplayName ile giriş yap
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("roleSelect").addEventListener("change", function () {
            var selectedRole = this.value;
            var bransDiv = document.getElementById("bransDiv");
            var bransInput = document.getElementById("Input_Brans");

            if (selectedRole === "Ogretmen") {
                bransDiv.style.display = "block";
            } else {
                bransDiv.style.display = "none";
                if (bransInput) {
                    bransInput.value = ""; // Branş'ı boş gönder
                }
            }
        });
    </script>
}
